{
  "$ref": "#/definitions/drug-tests",
  "definitions": {
    "drug-tests": {
      "type": "object",
      "properties": {
        "resident": {
          "type": "string"
        },
        "testDate": {
          "anyOf": [
            {
              "type": "string",
              "format": "date-time"
            },
            {
              "type": "string",
              "format": "date"
            },
            {
              "type": "integer",
              "format": "unix-time"
            }
          ]
        },
        "testType": {
          "type": "string",
          "enum": [
            "Urine",
            "Breathalyzer",
            "Saliva",
            "Hair"
          ]
        },
        "result": {
          "type": "string",
          "enum": [
            "Pass",
            "Fail",
            "Inconclusive",
            "Refused"
          ]
        },
        "substancesDetected": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "None",
              "Alcohol",
              "Marijuana",
              "Cocaine",
              "Opiates",
              "Amphetamines",
              "Benzodiazepines",
              "Other"
            ]
          }
        },
        "administeredBy": {
          "type": "string"
        },
        "notes": {
          "type": "string"
        },
        "$schema": {
          "type": "string"
        }
      },
      "required": [
        "resident",
        "testDate",
        "testType",
        "result",
        "administeredBy"
      ],
      "additionalProperties": false
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}