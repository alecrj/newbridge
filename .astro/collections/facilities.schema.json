{
  "$ref": "#/definitions/facilities",
  "definitions": {
    "facilities": {
      "type": "object",
      "properties": {
        "facilityName": {
          "type": "string"
        },
        "slug": {
          "type": "string"
        },
        "address": {
          "type": "object",
          "properties": {
            "street": {
              "type": "string"
            },
            "city": {
              "type": "string"
            },
            "state": {
              "type": "string"
            },
            "zip": {
              "type": "string"
            }
          },
          "required": [
            "street",
            "city",
            "state",
            "zip"
          ],
          "additionalProperties": false
        },
        "location": {
          "type": "string"
        },
        "capacity": {
          "type": "number"
        },
        "currentOccupancy": {
          "type": "number"
        },
        "rentRange": {
          "type": "string"
        },
        "monthlyRent": {
          "type": "number"
        },
        "programs": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "Detox",
              "Residential Treatment",
              "IOP",
              "PHP",
              "MAT",
              "Counseling",
              "Life Skills"
            ]
          }
        },
        "amenities": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "Private Rooms",
              "Shared Rooms",
              "Kitchen",
              "Laundry",
              "Transportation",
              "Gym",
              "Pool",
              "WiFi",
              "Parking"
            ]
          }
        },
        "availability": {
          "type": "string",
          "enum": [
            "accepting",
            "waitlist",
            "full"
          ]
        },
        "featured": {
          "type": "boolean",
          "default": false
        },
        "description": {
          "type": "string"
        },
        "images": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "metaTitle": {
          "type": "string"
        },
        "metaDescription": {
          "type": "string"
        },
        "$schema": {
          "type": "string"
        }
      },
      "required": [
        "facilityName",
        "slug",
        "address",
        "location",
        "capacity",
        "currentOccupancy",
        "rentRange",
        "monthlyRent",
        "programs",
        "amenities",
        "availability",
        "description",
        "images"
      ],
      "additionalProperties": false
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}