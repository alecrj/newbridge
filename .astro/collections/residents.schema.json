{
  "$ref": "#/definitions/residents",
  "definitions": {
    "residents": {
      "type": "object",
      "properties": {
        "fullName": {
          "type": "string"
        },
        "dateOfBirth": {
          "anyOf": [
            {
              "type": "string",
              "format": "date-time"
            },
            {
              "type": "string",
              "format": "date"
            },
            {
              "type": "integer",
              "format": "unix-time"
            }
          ]
        },
        "moveInDate": {
          "anyOf": [
            {
              "type": "string",
              "format": "date-time"
            },
            {
              "type": "string",
              "format": "date"
            },
            {
              "type": "integer",
              "format": "unix-time"
            }
          ]
        },
        "facility": {
          "type": "string",
          "enum": [
            "Haven House",
            "Recovery Villa",
            "Serenity Manor"
          ]
        },
        "roomNumber": {
          "type": "string"
        },
        "emergencyContact": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "phone": {
              "type": "string"
            },
            "relationship": {
              "type": "string"
            }
          },
          "required": [
            "name",
            "phone",
            "relationship"
          ],
          "additionalProperties": false
        },
        "insuranceProvider": {
          "type": "string"
        },
        "sobrietyDate": {
          "anyOf": [
            {
              "type": "string",
              "format": "date-time"
            },
            {
              "type": "string",
              "format": "date"
            },
            {
              "type": "integer",
              "format": "unix-time"
            }
          ]
        },
        "programPhase": {
          "type": "string",
          "enum": [
            "Phase 1 - Detox",
            "Phase 2 - Stabilization",
            "Phase 3 - Independent Living",
            "Phase 4 - Aftercare"
          ]
        },
        "monthlyRent": {
          "type": "number"
        },
        "status": {
          "type": "string",
          "enum": [
            "Active",
            "Extended Stay",
            "Graduated",
            "Terminated"
          ]
        },
        "caseNotes": {
          "type": "string"
        },
        "profilePhoto": {
          "type": "string"
        },
        "$schema": {
          "type": "string"
        }
      },
      "required": [
        "fullName",
        "dateOfBirth",
        "moveInDate",
        "facility",
        "roomNumber",
        "emergencyContact",
        "sobrietyDate",
        "programPhase",
        "monthlyRent",
        "status"
      ],
      "additionalProperties": false
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}