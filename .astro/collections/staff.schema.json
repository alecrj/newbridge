{
  "$ref": "#/definitions/staff",
  "definitions": {
    "staff": {
      "type": "object",
      "properties": {
        "fullName": {
          "type": "string"
        },
        "email": {
          "type": "string",
          "format": "email"
        },
        "phone": {
          "type": "string"
        },
        "role": {
          "type": "string",
          "enum": [
            "Administrator",
            "House Manager",
            "Case Manager",
            "Counselor",
            "Support Staff",
            "Security"
          ]
        },
        "facilityAssignment": {
          "type": "string",
          "enum": [
            "All Facilities",
            "Haven House",
            "Recovery Villa",
            "Serenity Manor"
          ]
        },
        "hireDate": {
          "anyOf": [
            {
              "type": "string",
              "format": "date-time"
            },
            {
              "type": "string",
              "format": "date"
            },
            {
              "type": "integer",
              "format": "unix-time"
            }
          ]
        },
        "active": {
          "type": "boolean",
          "default": true
        },
        "permissions": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "Resident Management",
              "Lead Management",
              "Financial Reports",
              "Clinical Notes",
              "User Management",
              "System Settings"
            ]
          }
        },
        "profilePhoto": {
          "type": "string"
        },
        "bio": {
          "type": "string"
        },
        "$schema": {
          "type": "string"
        }
      },
      "required": [
        "fullName",
        "email",
        "phone",
        "role",
        "facilityAssignment",
        "hireDate",
        "permissions"
      ],
      "additionalProperties": false
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}