{
  "$ref": "#/definitions/caseNotes",
  "definitions": {
    "caseNotes": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "residentId": {
          "type": "string"
        },
        "staffMember": {
          "type": "string"
        },
        "noteType": {
          "type": "string",
          "enum": [
            "daily",
            "incident",
            "medical",
            "family",
            "progress",
            "behavioral",
            "meeting",
            "phone-call",
            "assessment"
          ]
        },
        "urgency": {
          "type": "string",
          "enum": [
            "low",
            "medium",
            "high",
            "critical"
          ],
          "default": "medium"
        },
        "confidential": {
          "type": "boolean",
          "default": false
        },
        "title": {
          "type": "string"
        },
        "content": {
          "type": "string"
        },
        "actionItems": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        },
        "followUpRequired": {
          "type": "boolean",
          "default": false
        },
        "followUpDate": {
          "type": "string"
        },
        "followUpWith": {
          "type": "string"
        },
        "categories": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        },
        "createdAt": {
          "type": "string"
        },
        "updatedAt": {
          "type": "string"
        },
        "witnessed": {
          "type": "boolean",
          "default": false
        },
        "witnessName": {
          "type": "string"
        },
        "incidentSeverity": {
          "type": "string",
          "enum": [
            "minor",
            "moderate",
            "major",
            "critical"
          ]
        },
        "policeInvolved": {
          "type": "boolean",
          "default": false
        },
        "familyNotified": {
          "type": "boolean",
          "default": false
        },
        "medicationRelated": {
          "type": "boolean",
          "default": false
        },
        "reviewed": {
          "type": "boolean",
          "default": false
        },
        "reviewedBy": {
          "type": "string"
        },
        "reviewedAt": {
          "type": "string"
        },
        "supervisorNotified": {
          "type": "boolean",
          "default": false
        },
        "$schema": {
          "type": "string"
        }
      },
      "required": [
        "id",
        "residentId",
        "staffMember",
        "noteType",
        "title",
        "content",
        "createdAt",
        "updatedAt"
      ],
      "additionalProperties": false
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}