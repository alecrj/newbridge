---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

// Get facilities data
const facilities = await getCollection('facilities');
const featuredFacilities = facilities.filter(f => f.data.featured);
const availableFacilities = facilities.filter(f => f.data.availability === 'accepting');
---

<BaseLayout 
  title="NewBridge Living - Premier Sober Living in Tallahassee, FL"
  description="Quality sober living homes in Tallahassee, Florida. Structured environment, 24/7 support, proven recovery programs. Call (850) 555-HOPE for immediate placement."
>
  <!-- Hero Section -->
  <section class="relative min-h-screen flex items-center justify-center overflow-hidden">
    <!-- Background Image with Overlay -->
    <div class="absolute inset-0 bg-gradient-to-br from-emerald-900/90 via-teal-900/90 to-emerald-800/90 z-10"></div>
    <div class="absolute inset-0 bg-cover bg-center" style="background-image: url('/images/hero-recovery-home.jpg');"></div>
    
    <!-- Animated Background Pattern -->
    <div class="absolute inset-0 opacity-10 z-20">
      <div class="absolute inset-0" style="background-image: radial-gradient(circle at 2px 2px, rgba(255,255,255,0.15) 1px, transparent 0); background-size: 40px 40px;"></div>
    </div>

    <div class="relative z-30 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <!-- Hero Badge -->
      <div class="inline-flex items-center bg-emerald-500/20 text-emerald-300 px-6 py-3 rounded-full text-sm font-bold mb-8 backdrop-blur-sm border border-emerald-500/30 animate-pulse">
        <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
          <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        Accepting New Residents • Call Now
      </div>

      <!-- Main Headlines -->
      <h1 class="text-5xl md:text-7xl font-bold text-white mb-6 leading-tight">
        Your New Beginning
        <span class="block text-transparent bg-clip-text bg-gradient-to-r from-emerald-300 via-teal-300 to-emerald-400 animate-pulse">
          Starts Here
        </span>
      </h1>

      <p class="text-xl md:text-2xl text-emerald-100 mb-8 max-w-4xl mx-auto leading-relaxed">
        Premier sober living community in Tallahassee providing structured support, 
        proven programs, and a safe environment for lasting recovery.
      </p>

      <!-- Hero CTA Buttons -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center mb-12">
        <a href="tel:(850)555-HOPE" class="group bg-gradient-to-r from-emerald-600 to-teal-600 hover:from-emerald-700 hover:to-teal-700 text-white px-8 py-5 rounded-2xl font-bold text-xl shadow-2xl transform hover:scale-105 transition-all duration-300 flex items-center justify-center">
          <svg class="w-6 h-6 mr-3 group-hover:rotate-12 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
          </svg>
          Call (850) 555-HOPE
        </a>
        <a href="#contact" class="group bg-white/10 hover:bg-white/20 text-white px-8 py-5 rounded-2xl font-bold text-xl backdrop-blur-sm border-2 border-white/20 hover:border-white/40 transform hover:scale-105 transition-all duration-300 flex items-center justify-center">
          <svg class="w-6 h-6 mr-3 group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          Get Information
        </a>
      </div>

      <!-- Key Stats -->
      <div class="grid grid-cols-2 md:grid-cols-4 gap-6 max-w-4xl mx-auto">
        <div class="text-center p-4 bg-white/10 backdrop-blur-sm rounded-2xl border border-white/20">
          <div class="text-3xl font-bold text-white mb-1">24/7</div>
          <div class="text-emerald-200 text-sm font-semibold">Support Staff</div>
        </div>
        <div class="text-center p-4 bg-white/10 backdrop-blur-sm rounded-2xl border border-white/20">
          <div class="text-3xl font-bold text-white mb-1">5+</div>
          <div class="text-emerald-200 text-sm font-semibold">Years Experience</div>
