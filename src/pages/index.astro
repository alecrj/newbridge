          <div class="absolute -bottom-4 -right-8 w-32 h-32 bg-teal-200 rounded-full opacity-40 z-0"></div>
        </div>
      </div>
    </div>
  </section>

  <!-- Programs Section -->
  <section class="py-20 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <div class="inline-flex items-center bg-emerald-100 text-emerald-700 px-4 py-2 rounded-full text-sm font-bold mb-6">
