---
// src/pages/index.astro - Realistic version for new facility
import BaseLayout from '../layouts/BaseLayout.astro';

// Simple stats for a new single-facility operation
const stats = {
  bedsAvailable: 12,
  yearsExperience: 2, // More realistic for new facility
  communityFocus: "Tallahassee",
  programLength: "3-12 months"
};
---

<BaseLayout 
  title="NewBridge Living | Sober Living Home in Tallahassee, FL"
  description="Quality sober living home in Tallahassee, FL. Structured environment, 24/7 support, and proven recovery programs. Your bridge to independent living. Call today."
>
  <!-- Hero Section with Lead Capture -->
  <section class="relative min-h-screen flex items-center justify-center bg-gradient-to-br from-emerald-900 via-emerald-800 to-emerald-700 overflow-hidden">
    <!-- Background Pattern -->
    <div class="absolute inset-0 bg-black/20"></div>
    <div class="absolute inset-0 bg-gradient-to-r from-emerald-900/80 to-transparent"></div>
    
    <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        
        <!-- Hero Content -->
        <div class="text-white">
          <h1 class="text-5xl lg:text-7xl font-bold mb-6 leading-tight">
            Your Bridge to
            <span class="block text-transparent bg-clip-text bg-gradient-to-r from-yellow-400 to-orange-400">
              Independent Living
            </span>
          </h1>
          <p class="text-xl lg:text-2xl text-emerald-100 mb-8 leading-relaxed">
            Quality sober living home in Tallahassee providing the structure, support, and community you need for lasting recovery.
          </p>
          
          <!-- Trust Indicators -->
          <div class="flex flex-wrap items-center gap-6 mb-8">
            <div class="flex items-center text-emerald-200">
              <svg class="w-6 h-6 mr-2 text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
              </svg>
              <span class="font-semibold">Licensed & Accredited</span>
            </div>
            <div class="flex items-center text-emerald-200">
              <svg class="w-6 h-6 mr-2 text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              <span class="font-semibold">24/7 Support</span>
            </div>
            <div class="flex items-center text-emerald-200">
              <svg class="w-6 h-6 mr-2 text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
              </svg>
              <span class="font-semibold">Tallahassee Location</span>
            </div>
          </div>

          <div class="flex flex-col sm:flex-row gap-4">
            <a 
              href="#contact-form"
              class="bg-yellow-500 text-gray-900 px-8 py-4 rounded-2xl font-bold text-lg hover:bg-yellow-400 transition-all duration-300 hover:transform hover:scale-105 text-center shadow-xl"
            >
              Start Your Recovery Today
            </a>
            <a 
              href="tel:+1-850-555-0123"
              class="border-2 border-white text-white px-8 py-4 rounded-2xl font-bold text-lg hover:bg-white hover:text-emerald-900 transition-all duration-300 text-center"
            >
              Call Now: (850) 555-0123
            </a>
          </div>
        </div>

        <!-- Lead Capture Form -->
        <div 
          id="contact-form"
          class="bg-white rounded-3xl p-8 shadow-2xl border border-emerald-200/50 backdrop-blur-sm"
        >
          <div class="text-center mb-6">
            <h2 class="text-3xl font-bold text-gray-900 mb-2">Get Started Today</h2>
            <p class="text-gray-600">Free consultation • Immediate response • Confidential</p>
          </div>

          <form 
            name="lead-capture"
            method="POST"
            data-netlify="true"
            data-netlify-honeypot="bot-field"
            action="/success"
            class="space-y-4"
          >
            <input type="hidden" name="form-name" value="lead-capture" />
            <input type="hidden" name="source" value="homepage-hero" />
            <input type="hidden" name="status" value="new" />
            <input type="hidden" name="priority" value="high" />
            <div class="hidden">
              <label>Don't fill this out: <input name="bot-field" /></label>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <div>
                <label for="fullName" class="block text-sm font-semibold text-gray-700 mb-2">Full Name *</label>
                <input 
                  type="text" 
                  id="fullName" 
                  name="fullName" 
                  required
                  class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:ring-4 focus:ring-emerald-500/20 focus:border-emerald-500 transition-all duration-300"
                  placeholder="Enter your full name"
                />
              </div>
              <div>
                <label for="phone" class="block text-sm font-semibold text-gray-700 mb-2">Phone Number *</label>
                <input 
                  type="tel" 
                  id="phone" 
                  name="phone" 
                  required
                  class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:ring-4 focus:ring-emerald-500/20 focus:border-emerald-500 transition-all duration-300"
                  placeholder="(850) 555-0123"
                />
              </div>
            </div>

            <div>
              <label for="email" class="block text-sm font-semibold text-gray-700 mb-2">Email Address *</label>
              <input 
                type="email" 
                id="email" 
                name="email" 
                required
                class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:ring-4 focus:ring-emerald-500/20 focus:border-emerald-500 transition-all duration-300"
                placeholder="your.email@example.com"
              />
            </div>

            <div>
              <label for="message" class="block text-sm font-semibold text-gray-700 mb-2">Tell Us About Your Situation</label>
              <textarea 
                id="message" 
                name="message" 
                rows="3"
                class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:ring-4 focus:ring-emerald-500/20 focus:border-emerald-500 transition-all duration-300"
                placeholder="Brief description of your needs, timeline, insurance, etc."
              ></textarea>
            </div>

            <button 
              type="submit"
              class="w-full bg-emerald-600 text-white px-6 py-4 rounded-xl font-bold text-lg hover:bg-emerald-700 transition-all duration-300 hover:transform hover:scale-105 shadow-lg"
            >
              Get Free Consultation
            </button>

            <p class="text-xs text-gray-500 text-center">
              By submitting this form, you consent to receive calls/texts from NewBridge Living. Standard rates may apply.
            </p>
          </form>
        </div>
      </div>
    </div>
  </section>

  <!-- What We Offer Section -->
  <section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-4xl lg:text-5xl font-bold text-gray-900 mb-6">What Makes NewBridge Different</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          We provide more than just housing – we offer a complete support system designed to help you build a foundation for long-term recovery.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <div class="text-center group">
          <div class="bg-white rounded-2xl p-8 shadow-lg hover:shadow-xl transition-all duration-300 hover:transform hover:scale-105 border border-gray-100">
            <div class="bg-emerald-100 rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-6 group-hover:bg-emerald-200 transition-colors duration-300">
              <svg class="w-8 h-8 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-4">Structured Environment</h3>
            <p class="text-gray-600">Daily schedules, house meetings, and accountability systems to help you build healthy routines and stay on track.</p>
          </div>
        </div>

        <div class="text-center group">
          <div class="bg-white rounded-2xl p-8 shadow-lg hover:shadow-xl transition-all duration-300 hover:transform hover:scale-105 border border-gray-100">
            <div class="bg-emerald-100 rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-6 group-hover:bg-emerald-200 transition-colors duration-300">
              <svg class="w-8 h-8 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-4">Peer Support Community</h3>
            <p class="text-gray-600">Connect with others on similar journeys. Build lasting friendships and learn from shared experiences in recovery.</p>
          </div>
        </div>

        <div class="text-center group">
          <div class="bg-white rounded-2xl p-8 shadow-lg hover:shadow-xl transition-all duration-300 hover:transform hover:scale-105 border border-gray-100">
            <div class="bg-emerald-100 rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-6 group-hover:bg-emerald-200 transition-colors duration-300">
              <svg class="w-8 h-8 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-4">Life Skills Development</h3>
            <p class="text-gray-600">Financial literacy, job readiness, healthy relationships, and practical skills for successful independent living.</p>
          </div>
        </div>

        <div class="text-center group">
          <div class="bg-white rounded-2xl p-8 shadow-lg hover:shadow-xl transition-all duration-300 hover:transform hover:scale-105 border border-gray-100">
            <div class="bg-emerald-100 rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-6 group-hover:bg-emerald-200 transition-colors duration-300">
              <svg class="w-8 h-8 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-4">Accountability & Testing</h3>
            <p class="text-gray-600">Regular drug testing, curfew monitoring, and progress tracking to ensure you stay committed to your recovery goals.</p>
          </div>
        </div>

        <div class="text-center group">
          <div class="bg-white rounded-2xl p-8 shadow-lg hover:shadow-xl transition-all duration-300 hover:transform hover:scale-105 border border-gray-100">
            <div class="bg-emerald-100 rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-6 group-hover:bg-emerald-200 transition-colors duration-300">
              <svg class="w-8 h-8 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-4">24/7 Support Staff</h3>
            <p class="text-gray-600">Trained staff available around the clock for guidance, crisis intervention, and support whenever you need it most.</p>
          </div>
        </div>

        <div class="text-center group">
          <div class="bg-white rounded-2xl p-8 shadow-lg hover:shadow-xl transition-all duration-300 hover:transform hover:scale-105 border border-gray-100">
            <div class="bg-emerald-100 rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-6 group-hover:bg-emerald-200 transition-colors duration-300">
              <svg class="w-8 h-8 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-4">Bridge to Independence</h3>
            <p class="text-gray-600">Gradual transition support to help you move from structured living to full independence with confidence.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Our Facility Section -->
  <section class="py-20 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="text-4xl lg:text-5xl font-bold text-gray-900 mb-6">Our Tallahassee Home</h2>
          <p class="text-xl text-gray-600 mb-8">
            Located in a quiet, supportive neighborhood in Tallahassee, our facility provides a safe, comfortable environment for your recovery journey.
          </p>
          
          <div class="space-y-6">
            <div class="flex items-start">
              <div class="bg-emerald-100 rounded-full p-2 mr-4 mt-1">
                <svg class="w-5 h-5 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-4m-5 0H3m2 0h3M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
                </svg>
              </div>
              <div>
                <h3 class="text-lg font-semibold text-gray-900 mb-2">{stats.bedsAvailable} Beds Available</h3>
                <p class="text-gray-600">Comfortable private and shared rooms in a home-like setting</p>
              </div>
            </div>

            <div class="flex items-start">
              <div class="bg-emerald-100 rounded-full p-2 mr-4 mt-1">
                <svg class="w-5 h-5 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                </svg>
              </div>
              <div>
                <h3 class="text-lg font-semibold text-gray-900 mb-2">Prime Location</h3>
                <p class="text-gray-600">Easy access to employment, treatment centers, and community resources</p>
              </div>
            </div>

            <div class="flex items-start">
              <div class="bg-emerald-100 rounded-full p-2 mr-4 mt-1">
                <svg class="w-5 h-5 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              </div>
              <div>
                <h3 class="text-lg font-semibold text-gray-900 mb-2">Flexible Program Length</h3>
                <p class="text-gray-600">{stats.programLength} - tailored to your individual recovery needs</p>
              </div>
            </div>
          </div>

          <div class="mt-8">
            <a 
              href="/contact"
              class="inline-flex items-center bg-emerald-600 text-white px-8 py-4 rounded-xl font-semibold text-lg hover:bg-emerald-700 transition-all duration-300 hover:transform hover:scale-105"
            >
              Schedule a Tour
              <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
              </svg>
            </a>
          </div>
        </div>

        <div class="bg-emerald-100 rounded-2xl p-8 text-center">
          <div class="bg-white rounded-xl p-8 shadow-lg">
            <h3 class="text-2xl font-bold text-gray-900 mb-6">Facility Amenities</h3>
            <div class="grid grid-cols-2 gap-4 text-left">
              <div class="flex items-center">
                <svg class="w-5 h-5 text-emerald-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                </svg>
                <span class="text-gray-700">Full Kitchen</span>
              </div>
              <div class="flex items-center">
                <svg class="w-5 h-5 text-emerald-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                </svg>
                <span class="text-gray-700">Laundry Room</span>
              </div>
              <div class="flex items-center">
                <svg class="w-5 h-5 text-emerald-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                </svg>
                <span class="text-gray-700">WiFi Internet</span>
              </div>
              <div class="flex items-center">
                <svg class="w-5 h-5 text-emerald-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                </svg>
                <span class="text-gray-700">Free Parking</span>
              </div>
              <div class="flex items-center">
                <svg class="w-5 h-5 text-emerald-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                </svg>
                <span class="text-gray-700">Common Areas</span>
              </div>
              <div class="flex items-center">
                <svg class="w-5 h-5 text-emerald-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                </svg>
                <span class="text-gray-700">Study Spaces</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Call to Action -->
  <section class="py-20 bg-gradient-to-r from-emerald-900 to-emerald-800 text-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-4xl lg:text-5xl font-bold mb-6">Ready to Start Your Recovery Journey?</h2>
      <p class="text-xl text-emerald-100 mb-10">
        Don't wait another day. Your recovery journey starts with a single phone call. Our admissions team is standing by to help you find the right path forward.
      </p>
      
      <div class="flex flex-col sm:flex-row gap-6 justify-center items-center">
        <a 
          href="tel:+1-850-555-0123"
          class="bg-yellow-500 text-gray-900 px-8 py-4 rounded-2xl font-bold text-xl hover:bg-yellow-400 transition-all duration-300 hover:transform hover:scale-105 shadow-xl flex items-center"
        >
          <svg class="w-6 h-6 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
          </svg>
          Call (850) 555-0123
        </a>
        <a 
          href="/contact"
          class="border-2 border-white text-white px-8 py-4 rounded-2xl font-bold text-xl hover:bg-white hover:text-emerald-900 transition-all duration-300 text-center"
        >
          Get Free Consultation
        </a>
      </div>

      <p class="text-emerald-200 mt-8 text-lg">
        We accept most insurance plans • Financing available • Confidential consultations
      </p>
    </div>
  </section>
</BaseLayout>

<script>
  // Enhanced form handling with better UX
  document.addEventListener('DOMContentLoaded', function() {
    const form = document.querySelector('form[name="lead-capture"]') as HTMLFormElement | null;
    const submitButton = form?.querySelector('button[type="submit"]') as HTMLButtonElement | null;
    
    if (form && submitButton) {
      const originalText = submitButton.textContent || 'Submit';
      
      form.addEventListener('submit', function(e: SubmitEvent) {
        // Show loading state
        submitButton.innerHTML = `
          <svg class="animate-spin -ml-1 mr-3 h-5 w-5 text-white inline" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
          </svg>
          Submitting...
        `;
        submitButton.disabled = true;
        
        // Reset after 3 seconds if still on page
        setTimeout(() => {
          submitButton.textContent = originalText;
          submitButton.disabled = false;
        }, 3000);
      });
    }

    // Smooth scrolling for anchor links
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
      anchor.addEventListener('click', function (e: Event) {
        e.preventDefault();
        const href = (this as HTMLAnchorElement).getAttribute('href');
        const target = href ? document.querySelector(href) : null;
        if (target) {
          target.scrollIntoView({
            behavior: 'smooth',
            block: 'start'
          });
        }
      });
    });
  });
</script>