---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

// Get featured facilities
const facilities = await getCollection('facilities').catch(() => []);
const featuredFacilities = facilities.filter(f => f.data.featured).slice(0, 3);
---

<BaseLayout 
  title="NewBridge Living | Sober Living Homes in Tallahassee, FL"
  description="Quality sober living homes in Tallahassee, FL. Structured environment, 24/7 support, and proven recovery programs. Call (850) 555-HOPE today."
>
  <!-- Hero Section -->
  <section class="relative bg-gradient-to-br from-emerald-900 via-teal-900 to-emerald-800 min-h-screen flex items-center overflow-hidden">
    <!-- Background Pattern -->
    <div class="absolute inset-0 opacity-10">
      <div class="absolute inset-0" style="background-image: radial-gradient(circle at 2px 2px, rgba(255,255,255,0.15) 1px, transparent 0); background-size: 40px 40px;"></div>
    </div>
    
    <!-- Floating Elements -->
    <div class="absolute top-20 left-10 w-20 h-20 bg-emerald-400/20 rounded-full blur-xl animate-pulse"></div>
    <div class="absolute bottom-32 right-16 w-32 h-32 bg-teal-400/20 rounded-full blur-2xl animate-pulse delay-1000"></div>
    <div class="absolute top-1/3 right-1/4 w-16 h-16 bg-emerald-300/20 rounded-full blur-lg animate-pulse delay-500"></div>
    
    <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <!-- Hero Content -->
        <div class="text-center lg:text-left">
          <!-- Badge -->
          <div class="inline-flex items-center bg-emerald-500/20 text-emerald-300 px-6 py-3 rounded-full text-sm font-semibold mb-8 backdrop-blur-sm border border-emerald-500/30">
            <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            Licensed Sober Living Facility
          </div>
          
          <!-- Main Headline -->
          <h1 class="text-4xl md:text-6xl lg:text-7xl font-bold text-white mb-8 leading-tight">
            Your Journey to 
            <span class="text-transparent bg-clip-text bg-gradient-to-r from-emerald-300 to-teal-300">Recovery</span>
            Starts Here
          </h1>
          
          <!-- Subheadline -->
          <p class="text-xl lg:text-2xl text-emerald-100 mb-12 leading-relaxed max-w-2xl mx-auto lg:mx-0">
            Safe, structured sober living homes in Tallahassee. Professional support, 
            proven programs, and a community that understands your journey.
          </p>
          
          <!-- CTA Buttons -->
          <div class="flex flex-col sm:flex-row gap-6 justify-center lg:justify-start">
            <a 
              href="#contact" 
              class="group bg-gradient-to-r from-emerald-500 to-emerald-600 hover:from-emerald-600 hover:to-emerald-700 text-white font-bold py-4 px-8 rounded-2xl text-lg transition-all duration-300 transform hover:scale-105 shadow-2xl hover:shadow-emerald-500/25 smooth-scroll"
            >
              <span class="flex items-center justify-center">
                Start Your Recovery Today
                <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                </svg>
              </span>
            </a>
            
            <a 
              href="tel:+18505555HOPE" 
              class="group bg-white/10 backdrop-blur-sm border-2 border-white/20 text-white hover:bg-white hover:text-emerald-900 font-bold py-4 px-8 rounded-2xl text-lg transition-all duration-300 transform hover:scale-105"
            >
              <span class="flex items-center justify-center">
                <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"></path>
                </svg>
                Call (850) 555-HOPE
              </span>
            </a>
          </div>
          
          <!-- Trust Indicators -->
          <div class="flex items-center justify-center lg:justify-start space-x-8 mt-12 text-emerald-200">
            <div class="text-center">
              <div class="text-2xl font-bold text-white">24/7</div>
              <div class="text-sm">Support Available</div>
            </div>
            <div class="w-px h-12 bg-emerald-500/30"></div>
            <div class="text-center">
              <div class="text-2xl font-bold text-white">Licensed</div>
              <div class="text-sm">State Certified</div>
            </div>
            <div class="w-px h-12 bg-emerald-500/30"></div>
            <div class="text-center">
              <div class="text-2xl font-bold text-white">Proven</div>
              <div class="text-sm">Success Track Record</div>
            </div>
          </div>
        </div>
        
        <!-- Hero Image/Stats -->
        <div class="relative">
          <!-- Main Image Container -->
          <div class="relative rounded-3xl overflow-hidden shadow-2xl bg-gradient-to-br from-white/10 to-white/5 backdrop-blur-lg border border-white/20 p-8">
            <!-- Stats Grid -->
            <div class="grid grid-cols-2 gap-6 mb-8">
              <div class="text-center p-6 bg-white/10 rounded-2xl backdrop-blur-sm">
                <div class="text-3xl font-bold text-white mb-2">95%</div>
                <div class="text-emerald-200 text-sm">Success Rate</div>
              </div>
              <div class="text-center p-6 bg-white/10 rounded-2xl backdrop-blur-sm">
                <div class="text-3xl font-bold text-white mb-2">500+</div>
                <div class="text-emerald-200 text-sm">Lives Changed</div>
              </div>
              <div class="text-center p-6 bg-white/10 rounded-2xl backdrop-blur-sm">
                <div class="text-3xl font-bold text-white mb-2">24/7</div>
                <div class="text-emerald-200 text-sm">Professional Support</div>
              </div>
              <div class="text-center p-6 bg-white/10 rounded-2xl backdrop-blur-sm">
                <div class="text-3xl font-bold text-white mb-2">10+</div>
                <div class="text-emerald-200 text-sm">Years Experience</div>
              </div>
            </div>
            
            <!-- Testimonial -->
            <div class="bg-white/10 rounded-2xl p-6 backdrop-blur-sm border border-white/20">
              <div class="flex items-center mb-4">
                <div class="flex text-yellow-400">
                  {[...Array(5)].map(() => (
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                    </svg>
                  ))}
                </div>
              </div>
              <p class="text-white italic mb-4">"NewBridge Living saved my life. The staff genuinely cares, and the structured environment helped me build the foundation I needed for lasting recovery."</p>
              <p class="text-emerald-200 font-semibold">â€” Marcus T., Graduate</p>
            </div>
          </div>
          
          <!-- Floating Accent -->
          <div class="absolute -top-6 -right-6 w-24 h-24 bg-gradient-to-br from-emerald-400 to-teal-500 rounded-full opacity-60 blur-xl"></div>
          <div class="absolute -bottom-6 -left-6 w-32 h-32 bg-gradient-to-br from-teal-400 to-emerald-500 rounded-full opacity-40 blur-2xl"></div>
        </div>
      </div>
    </div>
    
    <!-- Scroll Indicator -->
    <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
      <a href="#about" class="text-emerald-300 hover:text-white transition-colors duration-300 smooth-scroll">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
        </svg>
      </a>
    </div>
  </section>

  <!-- About Section -->
  <section id="about" class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
        <!-- Content -->
        <div>
          <div class="inline-flex items-center bg-emerald-100 text-emerald-700 px-4 py-2 rounded-full text-sm font-semibold mb-6">
            <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            About NewBridge Living
          </div>
          
          <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-8 leading-tight">
            Building Bridges to 
            <span class="text-emerald-600">Lasting Recovery</span>
          </h2>
          
          <p class="text-xl text-gray-600 mb-8 leading-relaxed">
            For over a decade, NewBridge Living has been Tallahassee's premier sober living community. 
            We understand that recovery is a journey, not a destination, and we're here to walk alongside 
            you every step of the way.
          </p>
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
            <div class="flex items-start space-x-4">
              <div class="bg-emerald-100 rounded-lg p-3">
                <svg class="w-6 h-6 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
                </svg>
              </div>
              <div>
                <h4 class="font-semibold text-gray-900 mb-2">Safe Environment</h4>
                <p class="text-gray-600 text-sm">Secure, drug-free living spaces with 24/7 monitoring and support.</p>
              </div>
            </div>
            
            <div class="flex items-start space-x-4">
              <div class="bg-emerald-100 rounded-lg p-3">
                <svg class="w-6 h-6 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                </svg>
              </div>
              <div>
                <h4 class="font-semibold text-gray-900 mb-2">Expert Staff</h4>
                <p class="text-gray-600 text-sm">Licensed professionals with years of addiction recovery experience.</p>
              </div>
            </div>
            
            <div class="flex items-start space-x-4">
              <div class="bg-emerald-100 rounded-lg p-3">
                <svg class="w-6 h-6 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                </svg>
              </div>
              <div>
                <h4 class="font-semibold text-gray-900 mb-2">Proven Programs</h4>
                <p class="text-gray-600 text-sm">Evidence-based treatment approaches with documented success rates.</p>
              </div>
            </div>
            
            <div class="flex items-start space-x-4">
              <div class="bg-emerald-100 rounded-lg p-3">
                <svg class="w-6 h-6 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
                </svg>
              </div>
              <div>
                <h4 class="font-semibold text-gray-900 mb-2">Community Support</h4>
                <p class="text-gray-600 text-sm">Strong peer network and ongoing alumni connections.</p>
              </div>
            </div>
          </div>
          
          <a 
            href="/facilities" 
            class="inline-flex items-center bg-emerald-600 hover:bg-emerald-700 text-white font-semibold py-3 px-6 rounded-xl transition-all duration-300 group"
          >
            Explore Our Facilities
            <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </a>
        </div>
        
        <!-- Image -->
        <div class="relative">
          <div class="relative rounded-2xl overflow-hidden shadow-2xl">
            <img 
              src="/images/about-hero.jpg" 
              alt="NewBridge Living supportive community"
              class="w-full h-[600px] object-cover"
              loading="lazy"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-black/30 via-transparent to-transparent"></div>
          </div>
          
          <!-- Floating Stats Card -->
          <div class="absolute -bottom-8 -left-8 bg-white rounded-2xl p-6 shadow-2xl border border-gray-100">
            <div class="flex items-center space-x-4">
              <div class="bg-emerald-500 rounded-full p-3">
                <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <div>
                <div class="text-2xl font-bold text-gray-900">10+ Years</div>
                <div class="text-gray-600 text-sm">Serving Tallahassee</div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Programs Section -->
  <section id="programs" class="py-20 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Section Header -->
      <div class="text-center mb-16">
        <div class="inline-flex items-center bg-emerald-100 text-emerald-700 px-4 py-2 rounded-full text-sm font-semibold mb-6">
          <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
            <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          Our Recovery Programs
        </div>
        
        <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
          Comprehensive Support for 
          <span class="text-emerald-600">Every Stage</span>
        </h2>
        
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Our evidence-based programs are designed to meet you where you are in your recovery journey, 
          providing the structure, support, and skills you need to thrive.
        </p>
      </div>

      <!-- Programs Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- Program 1: Transitional Living -->
        <div class="bg-white rounded-2xl p-8 shadow-lg hover:shadow-xl transition-all duration-300 border border-gray-100 group">
          <div class="bg-emerald-100 rounded-2xl p-4 w-16 h-16 flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-300">
            <svg class="w-8 h-8 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
            </svg>
          </div>
          
          <h3 class="text-2xl font-bold text-gray-900 mb-4">Transitional Living</h3>
          <p class="text-gray-600 mb-6 leading-relaxed">
            Structured sober living environment with 24/7 support, helping residents transition from treatment to independent living.
          </p>
          
          <ul class="space-y-3 mb-8">
            <li class="flex items-center text-gray-700">
              <svg class="w-5 h-5 text-emerald-500 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              24/7 professional supervision
            </li>
            <li class="flex items-center text-gray-700">
              <svg class="w-5 h-5 text-emerald-500 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              Structured daily routine
            </li>
            <li class="flex items-center text-gray-700">
              <svg class="w-5 h-5 text-emerald-500 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              Life skills development
            </li>
          </ul>
          
          <div class="text-emerald-600 font-semibold">3-6 month program</div>
        </div>

        <!-- Program 2: Intensive Outpatient -->
        <div class="bg-white rounded-2xl p-8 shadow-lg hover:shadow-xl transition-all duration-300 border border-gray-100 group">
          <div class="bg-blue-100 rounded-2xl p-4 w-16 h-16 flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-300">
            <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"></path>
            </svg>
          </div>
          
          <h3 class="text-2xl font-bold text-gray-900 mb-4">Intensive Outpatient</h3>
          <p class="text-gray-600 mb-6 leading-relaxed">
            Flexible program allowing residents to maintain work or education while receiving comprehensive addiction treatment.
          </p>
          
          <ul class="space-y-3 mb-8">
            <li class="flex items-center text-gray-700">
              <svg class="w-5 h-5 text-blue-500 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              Group therapy sessions
            </li>
            <li class="flex items-center text-gray-700">
              <svg class="w-5 h-5 text-blue-500 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              Individual counseling
            </li>
            <li class="flex items-center text-gray-700">
              <svg class="w-5 h-5 text-blue-500 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              Flexible scheduling
            </li>
          </ul>
          
          <div class="text-blue-600 font-semibold">9-week program</div>
        </div>

        <!-- Program 3: Extended Care -->
        <div class="bg-white rounded-2xl p-8 shadow-lg hover:shadow-xl transition-all duration-300 border border-gray-100 group">
          <div class="bg-purple-100 rounded-2xl p-4 w-16 h-16 flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-300">
            <svg class="w-8 h-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
            </svg>
          </div>
          
          <h3 class="text-2xl font-bold text-gray-900 mb-4">Extended Care</h3>
          <p class="text-gray-600 mb-6 leading-relaxed">
            Long-term support for individuals who need additional time and structure to build lasting recovery foundations.
          </p>
          
          <ul class="space-y-3 mb-8">
            <li class="flex items-center text-gray-700">
              <svg class="w-5 h-5 text-purple-500 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              Long-term stability
            </li>
            <li class="flex items-center text-gray-700">
              <svg class="w-5 h-5 text-purple-500 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              Continued therapy
            </li>
            <li class="flex items-center text-gray-700">
              <svg class="w-5 h-5 text-purple-500 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              Alumni mentorship
            </li>
          </ul>
          
          <div class="text-purple-600 font-semibold">6-12 month program</div>
        </div>
      </div>

      <!-- CTA Section -->
      <div class="text-center mt-16">
        <div class="bg-white rounded-2xl p-8 shadow-lg border border-gray-100 max-w-2xl mx-auto">
          <h3 class="text-2xl font-bold text-gray-900 mb-4">Ready to Start Your Recovery Journey?</h3>
          <p class="text-gray-600 mb-6">
            Our admissions team is here to help you find the right program for your unique needs and circumstances.
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a 
              href="#contact" 
              class="bg-emerald-600 hover:bg-emerald-700 text-white font-semibold py-3 px-6 rounded-xl transition-all duration-300 smooth-scroll"
            >
              Get Started Today
            </a>
            <a 
              href="tel:+18505555HOPE" 
              class="border-2 border-emerald-600 text-emerald-600 hover:bg-emerald-600 hover:text-white font-semibold py-3 px-6 rounded-xl transition-all duration-300"
