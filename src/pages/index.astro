---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

// Get featured facilities
const facilities = await getCollection('facilities');
const featuredFacilities = facilities
  .filter(facility => facility.data.featured)
  .slice(0, 3);

// If no featured facilities, show first 3
const displayFacilities = featuredFacilities.length > 0 ? featuredFacilities : facilities.slice(0, 3);
