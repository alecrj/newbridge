---
// src/pages/index.astro - Professional homepage for new sober living facility
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

// Get real facility data (not fake content)
const facilities = await getCollection('facilities').catch(() => []);
const featuredFacilities = facilities.filter(f => f.data.featured).slice(0, 3);
const availableFacilities = facilities.filter(f => f.data.availability === 'accepting');

// Calculate real occupancy if we have data
const totalCapacity = facilities.reduce((acc, f) => acc + f.data.capacity, 0);
const totalResidents = 0; // This would come from actual residents collection
const occupancyRate = totalCapacity > 0 ? Math.round((totalResidents / totalCapacity) * 100) : 0;
