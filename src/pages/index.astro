---
// src/pages/index.astro — NewBridge Living homepage (astonishing)
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const facilities = await getCollection('facilities').catch(() => []);
const featuredFacilities = facilities.filter((f) => f.data.featured).slice(0, 3);
const availableFacilities = facilities.filter((f) => f.data.availability === 'accepting');

const totalCapacity = facilities.reduce((acc, f) => acc + (Number(f.data.capacity) || 0), 0);
const totalResidents = 0; // TODO: plug in real data when ready
const occupancyRate = totalCapacity > 0 ? Math.round((totalResidents / totalCapacity) * 100) : null;

const totalHomes = facilities.length;
const acceptingCount = availableFacilities.length;
const availabilityText = acceptingCount > 0 ? `${acceptingCount} home${acceptingCount > 1 ? 's' : ''} accepting` : 'Join the waitlist';

const PHONE_DISPLAY = '(850) 555-HOPE';
const PHONE_TEL = 'tel:+18505554673';
---

<BaseLayout
  title="NewBridge Living — Sober Living Homes for Men in Tallahassee, FL"
  description="Professionally managed, structured sober living for men in Tallahassee. Clear standards, accountability, and support that helps independence stick. Confidential intake."
>
  <!-- Skip link for a11y -->
  <a href="#main" class="sr-only focus:not-sr-only focus:fixed focus:top-2 focus:left-2 focus:z-50 focus:rounded-md focus:bg-white focus:px-3 focus:py-2 focus:shadow">Skip to content</a>

  <!-- Top announcement / conversion strip -->
  <section aria-label="Availability notice" class="bg-emerald-50 text-emerald-900 border-b border-emerald-100">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-2 flex flex-col gap-2 sm:flex-row sm:items-center sm:justify-between">
      <p class="text-sm font-medium">
        <strong>Now accepting applications</strong>
        <span class="mx-2 text-emerald-700">•</span>
        {availabilityText}
      </p>
      <div class="flex items-center gap-3">
        <a href="/contact" class="inline-flex items-center rounded-lg bg-emerald-700 px-3 py-1.5 text-sm font-semibold text-white hover:bg-emerald-800 transition">Apply now</a>
        <a href={PHONE_TEL} class="text-sm font-semibold text-emerald-800 hover:underline">{PHONE_DISPLAY}</a>
      </div>
    </div>
  </section>

  <!-- HERO -->
  <header class="relative overflow-hidden">
    <!-- Background -->
    <div class="absolute inset-0" style="
      background:
        radial-gradient(1200px 600px at 10% -10%, rgba(16,185,129,.25), transparent 60%),
        radial-gradient(900px 500px at 110% 20%, rgba(45,212,191,.20), transparent 60%),
        linear-gradient(180deg, #064e3b 0%, #065f46 35%, #064e3b 100%);
    "></div>
    <div class="absolute inset-0 opacity-[0.06] mix-blend-soft-light pointer-events-none" style="background-image:url('data:image/svg+xml;utf8,<svg xmlns=%22http://www.w3.org/2000/svg%22 width=%22128%22 height=%22128%22><filter id=%22n%22><feTurbulence type=%22fractalNoise%22 baseFrequency=%220.8%22 numOctaves=%222%22 stitchTiles=%22stitch%22/></filter><rect width=%22100%%22 height=%22100%%22 filter=%22url(%23n)%22 opacity=%220.6%22/></svg>'); background-size: 256px 256px;"></div>

    <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pt-20 pb-16 sm:pt-28">
      <div class="grid grid-cols-1 gap-10 lg:grid-cols-12 lg:gap-12 items-center">
        <!-- Left: copy -->
        <div class="lg:col-span-7 text-white">
          <span class="inline-flex items-center gap-2 rounded-full border border-emerald-300/30 bg-white/10 px-3 py-1 text-xs sm:text-sm font-medium text-emerald-100 backdrop-blur">
            <svg class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16Zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79L7.4 10.4a.75.75 0 10-1.2.9l2.25 3a.75.75 0 001.2 0l4.207-5.109z" clip-rule="evenodd"/></svg>
            Professionally managed sober living in Tallahassee
          </span>
          <h1 class="mt-6 max-w-3xl text-4xl sm:text-5xl md:text-6xl font-extrabold leading-tight tracking-tight">
            Your <span class="bg-gradient-to-r from-emerald-300 to-teal-300 bg-clip-text text-transparent">Bridge</span> to Independent Living
          </h1>
          <p class="mt-6 max-w-2xl text-lg sm:text-xl text-emerald-100/90">
            Clean, safe, structured housing for men in recovery. Simple standards. Real accountability. A community that has your back.
          </p>
          <div class="mt-10 flex flex-col sm:flex-row items-center gap-4">
            <a href="/facilities" class="group inline-flex items-center justify-center rounded-xl bg-white px-7 py-4 font-semibold text-emerald-900 shadow-lg shadow-emerald-900/20 transition hover:-translate-y-0.5 hover:shadow-xl">
              View Homes
              <svg class="ml-2 h-5 w-5 transition group-hover:translate-x-0.5" viewBox="0 0 24 24" fill="none" stroke="currentColor" aria-hidden="true"><path stroke-width="2" stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7"/></svg>
            </a>
            <a href={PHONE_TEL} class="inline-flex items-center justify-center rounded-xl border border-emerald-300/40 bg-white/5 px-7 py-4 font-semibold text-white backdrop-blur transition hover:bg-white/10">
              Call {PHONE_DISPLAY}
            </a>
          </div>
          <!-- Trust signals -->
          <div class="mt-8 flex flex-wrap items-center gap-x-6 gap-y-3 text-emerald-50/80 text-sm">
            <div class="inline-flex items-center gap-2"><span class="inline-block h-2 w-2 rounded-full bg-emerald-300"></span> HIPAA‑conscious intake</div>
            <div class="inline-flex items-center gap-2"><span class="inline-block h-2 w-2 rounded-full bg-emerald-300"></span> 24/7 house management</div>
            <div class="inline-flex items-center gap-2"><span class="inline-block h-2 w-2 rounded-full bg-emerald-300"></span> Drug‑free, zero‑tolerance policy</div>
          </div>
        </div>

        <!-- Right: visual -->
        <div class="lg:col-span-5">
          <div class="relative">
            <div class="absolute -inset-4 rounded-[28px] bg-emerald-400/20 blur-2xl"></div>
            <div class="relative rounded-[24px] border border-white/20 bg-white/5 p-4 backdrop-blur shadow-xl">
              <div class="grid grid-cols-2 gap-4">
                <div class="aspect-[4/3] rounded-2xl bg-gradient-to-br from-emerald-100 to-teal-100 border border-white/40"></div>
                <div class="aspect-[4/3] rounded-2xl bg-gradient-to-br from-emerald-100 to-teal-100 border border-white/40"></div>
                <div class="col-span-2 aspect-[7/3] rounded-2xl bg-gradient-to-br from-emerald-100 to-teal-100 border border-white/40"></div>
              </div>
              <p class="mt-4 text-center text-sm text-emerald-50/80">Photos coming soon — homes are kept clean, quiet, and safe.</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Stats strip -->
      <div class="mx-auto mt-12 grid w-full max-w-5xl grid-cols-1 gap-4 sm:grid-cols-3">
        <div class="rounded-xl border border-white/10 bg-white/5 p-5 text-center text-emerald-50">
          <div class="text-sm opacity-80">Total Homes</div>
          <div class="mt-1 text-3xl font-bold">{totalHomes || 0}</div>
        </div>
        <div class="rounded-xl border border-white/10 bg-white/5 p-5 text-center text-emerald-50">
          <div class="text-sm opacity-80">Accepting New Residents</div>
          <div class="mt-1 text-3xl font-bold">{acceptingCount || 0}</div>
        </div>
        <div class="rounded-xl border border-white/10 bg-white/5 p-5 text-center text-emerald-50">
          <div class="text-sm opacity-80">Occupancy</div>
          <div class="mt-1 text-3xl font-bold">{typeof occupancyRate === 'number' ? `${occupancyRate}%` : '—'}</div>
        </div>
      </div>
    </div>
  </header>

  <main id="main">
    <!-- WHY / ABOUT -->
    <section class="py-20 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 items-center gap-12 lg:grid-cols-2">
          <div>
            <span class="inline-flex items-center gap-2 rounded-full bg-emerald-50 px-3 py-1 text-sm font-medium text-emerald-700">
              <span class="inline-block h-2 w-2 rounded-full bg-emerald-500"></span>
              About NewBridge Living
            </span>
            <h2 class="mt-5 text-3xl sm:text-4xl font-bold text-gray-900">A new chapter in <span class="text-emerald-600">your recovery</span></h2>
            <p class="mt-4 text-gray-700 leading-relaxed">We bridge treatment and independent living with structure, accountability, and a sober community. Clear house standards. Respect. Real support.</p>

            <ul class="mt-6 grid grid-cols-1 gap-4 sm:grid-cols-2">
              <li class="flex gap-3">
                <span class="mt-1 inline-flex h-6 w-6 items-center justify-center rounded-full bg-emerald-100"><svg class="h-4 w-4 text-emerald-700" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true"><path fill-rule="evenodd" d="M16.704 5.29a1 1 0 010 1.414l-7.5 7.5a1 1 0 01-1.414 0l-3-3a1 1 0 111.414-1.414l2.293 2.293 6.793-6.793a1 1 0 011.414 0z" clip-rule="evenodd"/></svg></span>
                <div><h3 class="font-semibold text-gray-900">Professional management</h3><p class="text-gray-600">24/7 house managers with lived recovery experience.</p></div>
              </li>
              <li class="flex gap-3">
                <span class="mt-1 inline-flex h-6 w-6 items-center justify-center rounded-full bg-emerald-100"><svg class="h-4 w-4 text-emerald-700" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true"><path fill-rule="evenodd" d="M16.704 5.29a1 1 0 010 1.414l-7.5 7.5a1 1 0 01-1.414 0l-3-3a1 1 0 111.414-1.414l2.293 2.293 6.793-6.793a1 1 0 011.414 0z" clip-rule="evenodd"/></svg></span>
                <div><h3 class="font-semibold text-gray-900">Structured environment</h3><p class="text-gray-600">Meetings, chores, curfew — consistent and fair.</p></div>
              </li>
              <li class="flex gap-3">
                <span class="mt-1 inline-flex h-6 w-6 items-center justify-center rounded-full bg-emerald-100"><svg class="h-4 w-4 text-emerald-700" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true"><path fill-rule="evenodd" d="M16.704 5.29a1 1 0 010 1.414l-7.5 7.5a1 1 0 01-1.414 0l-3-3a1 1 0 111.414-1.414l2.293 2.293 6.793-6.793a1 1 0 011.414 0z" clip-rule="evenodd"/></svg></span>
                <div><h3 class="font-semibold text-gray-900">Privacy first</h3><p class="text-gray-600">Confidential intake and HIPAA‑conscious processes.</p></div>
              </li>
              <li class="flex gap-3">
                <span class="mt-1 inline-flex h-6 w-6 items-center justify-center rounded-full bg-emerald-100"><svg class="h-4 w-4 text-emerald-700" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true"><path fill-rule="evenodd" d="M16.704 5.29a1 1 0 010 1.414l-7.5 7.5a1 1 0 01-1.414 0l-3-3a1 1 0 111.414-1.414l2.293 2.293 6.793-6.793a1 1 0 011.414 0z" clip-rule="evenodd"/></svg></span>
                <div><h3 class="font-semibold text-gray-900">Zero‑tolerance sobriety</h3><p class="text-gray-600">Random testing and immediate action if standards are broken.</p></div>
              </li>
            </ul>
          </div>

          <!-- Illustrative card -->
          <div class="relative">
            <div class="rounded-2xl border border-gray-200 bg-gradient-to-br from-emerald-50 to-teal-50 p-8 shadow-sm">
              <div class="mx-auto flex max-w-md flex-col items-center text-center">
                <div class="mb-5 inline-flex h-20 w-20 items-center justify-center rounded-full bg-white shadow"><svg class="h-10 w-10 text-emerald-600" viewBox="0 0 24 24" fill="none" stroke="currentColor" aria-hidden="true"><path stroke-width="2" stroke-linecap="round" stroke-linejoin="round" d="M3 12l7-7 7 7M5 10v8a2 2 0 002 2h10a2 2 0 002-2v-8"/></svg></div>
                <h3 class="text-xl font-semibold text-gray-900">Clean, safe, welcoming</h3>
                <p class="mt-2 text-gray-600">You bring commitment; we bring structure and a stable home.</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- HOW IT WORKS -->
    <section class="bg-gray-50 py-20">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="mx-auto mb-12 max-w-3xl text-center">
          <span class="inline-flex items-center gap-2 rounded-full bg-emerald-50 px-3 py-1 text-sm font-medium text-emerald-700">How it works</span>
          <h2 class="mt-5 text-3xl sm:text-4xl font-bold text-gray-900">Simple intake, fast decisions</h2>
          <p class="mt-4 text-gray-700">No runaround. Here’s the playbook from first call to move‑in.</p>
        </div>

        <ol class="mx-auto max-w-4xl grid grid-cols-1 md:grid-cols-4 gap-6">
          <li class="rounded-2xl bg-white p-6 border border-gray-200 shadow-sm">
            <div class="text-2xl font-extrabold text-emerald-600">1</div>
            <h3 class="mt-3 font-semibold text-gray-900">Call or apply</h3>
            <p class="mt-1 text-gray-600">Quick screen to confirm eligibility and openings.</p>
          </li>
          <li class="rounded-2xl bg-white p-6 border border-gray-200 shadow-sm">
            <div class="text-2xl font-extrabold text-emerald-600">2</div>
            <h3 class="mt-3 font-semibold text-gray-900">Tour & expectations</h3>
            <p class="mt-1 text-gray-600">See the house. Review rules, curfew, and standards.</p>
          </li>
          <li class="rounded-2xl bg-white p-6 border border-gray-200 shadow-sm">
            <div class="text-2xl font-extrabold text-emerald-600">3</div>
            <h3 class="mt-3 font-semibold text-gray-900">Intake & testing</h3>
            <p class="mt-1 text-gray-600">Paperwork, payment, and a clean drug/alcohol screen.</p>
          </li>
          <li class="rounded-2xl bg-white p-6 border border-gray-200 shadow-sm">
            <div class="text-2xl font-extrabold text-emerald-600">4</div>
            <h3 class="mt-3 font-semibold text-gray-900">Move in</h3>
            <p class="mt-1 text-gray-600">Meet the house, get your bed, start strong.</p>
          </li>
        </ol>

        <!-- quick CTA -->
        <div class="mt-10 text-center">
          <a href="/contact" class="inline-flex items-center rounded-xl bg-emerald-600 px-6 py-3 font-semibold text-white hover:bg-emerald-700">
            Start your intake
            <svg class="ml-2 h-5 w-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" aria-hidden="true"><path stroke-width="2" stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7"/></svg>
          </a>
        </div>
      </div>
    </section>

    <!-- PROGRAMS -->
    <section class="bg-white py-20">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="mx-auto mb-12 max-w-3xl text-center">
          <span class="inline-flex items-center gap-2 rounded-full bg-emerald-50 px-3 py-1 text-sm font-medium text-emerald-700">Our Programs</span>
          <h2 class="mt-5 text-3xl sm:text-4xl font-bold text-gray-900">Support that makes independence stick</h2>
          <p class="mt-4 text-gray-700">Evidence‑based structure and skills that actually transfer to real life.</p>
        </div>

        <div class="grid grid-cols-1 gap-6 md:grid-cols-3">
          <article class="group rounded-2xl border border-gray-200 bg-white p-7 shadow-sm transition hover:shadow-md">
            <div class="mb-5 inline-flex h-16 w-16 items-center justify-center rounded-2xl bg-blue-100"><svg class="h-8 w-8 text-blue-600" viewBox="0 0 24 24" fill="none" stroke="currentColor" aria-hidden="true"><path stroke-width="2" stroke-linecap="round" stroke-linejoin="round" d="M3 12l7-7 7 7M5 10v8a2 2 0 002 2h10a2 2 0 002-2v-8"/></svg></div>
            <h3 class="text-lg font-semibold text-gray-900">Structured living</h3>
            <p class="mt-2 text-gray-600">Stable routine with meetings, chores, and curfew.</p>
            <ul class="mt-4 space-y-2 text-sm text-gray-700">
              <li class="flex items-center gap-2"><svg class="h-4 w-4 text-emerald-600" viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M16.704 5.29a1 1 0 010 1.414l-7.5 7.5a1 1 0 01-1.414 0l-3-3a1 1 0 111.414-1.414l2.293 2.293 6.793-6.793a1 1 0 011.414 0z" clip-rule="evenodd"/></svg>Daily/weekly meetings</li>
              <li class="flex items-center gap-2"><svg class="h-4 w-4 text-emerald-600" viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M16.704 5.29a1 1 0 010 1.414l-7.5 7.5a1 1 0 01-1.414 0l-3-3a1 1 0 111.414-1.414l2.293 2.293 6.793-6.793a1 1 0 011.414 0z" clip-rule="evenodd"/></svg>Chore assignments</li>
              <li class="flex items-center gap-2"><svg class="h-4 w-4 text-emerald-600" viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M16.704 5.29a1 1 0 010 1.414l-7.5 7.5a1 1 0 01-1.414 0l-3-3a1 1 0 111.414-1.414l2.293 2.293 6.793-6.793a1 1 0 011.414 0z" clip-rule="evenodd"/></svg>Curfew enforcement</li>
            </ul>
          </article>

          <article class="group rounded-2xl border border-gray-200 bg-white p-7 shadow-sm transition hover:shadow-md">
            <div class="mb-5 inline-flex h-16 w-16 items-center justify-center rounded-2xl bg-green-100"><svg class="h-8 w-8 text-green-600" viewBox="0 0 24 24" fill="none" stroke="currentColor" aria-hidden="true"><path stroke-width="2" stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7"/></svg></div>
            <h3 class="text-lg font-semibold text-gray-900">Accountability</h3>
            <p class="mt-2 text-gray-600">Regular check‑ins and support to keep you moving forward.</p>
            <ul class="mt-4 space-y-2 text-sm text-gray-700">
              <li class="flex items-center gap-2"><svg class="h-4 w-4 text-emerald-600" viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M16.704 5.29a1 1 0 010 1.414l-7.5 7.5a1 1 0 01-1.414 0l-3-3a1 1 0 111.414-1.414l2.293 2.293 6.793-6.793a1 1 0 011.414 0z" clip-rule="evenodd"/></svg>Random drug testing</li>
              <li class="flex items-center gap-2"><svg class="h-4 w-4 text-emerald-600" viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M16.704 5.29a1 1 0 010 1.414l-7.5 7.5a1 1 0 01-1.414 0l-3-3a1 1 0 111.414-1.414l2.293 2.293 6.793-6.793a1 1 0 011.414 0z" clip-rule="evenodd"/></svg>Progress tracking</li>
              <li class="flex items-center gap-2"><svg class="h-4 w-4 text-emerald-600" viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M16.704 5.29a1 1 0 010 1.414l-7.5 7.5a1 1 0 01-1.414 0l-3-3a1 1 0 111.414-1.414l2.293 2.293 6.793-6.793a1 1 0 011.414 0z" clip-rule="evenodd"/></svg>Case management</li>
            </ul>
          </article>

          <article class="group rounded-2xl border border-gray-200 bg-white p-7 shadow-sm transition hover:shadow-md">
            <div class="mb-5 inline-flex h-16 w-16 items-center justify-center rounded-2xl bg-purple-100"><svg class="h-8 w-8 text-purple-600" viewBox="0 0 24 24" fill="none" stroke="currentColor" aria-hidden="true"><path stroke-width="2" stroke-linecap="round" stroke-linejoin="round" d="M12 6v12M6 12h12"/></svg></div>
            <h3 class="text-lg font-semibold text-gray-900">Life skills</h3>
            <p class="mt-2 text-gray-600">Practical skills that make independence stick.</p>
            <ul class="mt-4 space-y-2 text-sm text-gray-700">
              <li class="flex items-center gap-2"><svg class="h-4 w-4 text-emerald-600" viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M16.704 5.29a1 1 0 010 1.414l-7.5 7.5a1 1 0 01-1.414 0l-3-3a1 1 0 111.414-1.414l2.293 2.293 6.793-6.793a1 1 0 011.414 0z" clip-rule="evenodd"/></svg>Employment support</li>
              <li class="flex items-center gap-2"><svg class="h-4 w-4 text-emerald-600" viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M16.704 5.29a1 1 0 010 1.414l-7.5 7.5a1 1 0 01-1.414 0l-3-3a1 1 0 111.414-1.414l2.293 2.293 6.793-6.793a1 1 0 011.414 0z" clip-rule="evenodd"/></svg>Financial planning</li>
              <li class="flex items-center gap-2"><svg class="h-4 w-4 text-emerald-600" viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M16.704 5.29a1 1 0 010 1.414l-7.5 7.5a1 1 0 01-1.414 0l-3-3a1 1 0 111.414-1.414l2.293 2.293 6.793-6.793a1 1 0 011.414 0z" clip-rule="evenodd"/></svg>Community integration</li>
            </ul>
          </article>
        </div>
      </div>
    </section>

    <!-- FEATURED FACILITIES -->
    {featuredFacilities.length > 0 && (
      <section class="py-20 bg-gray-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="mx-auto mb-12 max-w-3xl text-center">
            <span class="inline-flex items-center gap-2 rounded-full bg-emerald-50 px-3 py-1 text-sm font-medium text-emerald-700">Our Facilities</span>
            <h2 class="mt-5 text-3xl sm:text-4xl font-bold text-gray-900">Safe, professional living environments</h2>
            <p class="mt-4 text-gray-700">Maintained, monitored, and built for success.</p>
          </div>

          <div class="grid grid-cols-1 gap-6 md:grid-cols-3">
            {featuredFacilities.map((facility) => (
              <article class="overflow-hidden rounded-2xl border border-gray-200 bg-white shadow-sm transition hover:shadow-md">
                <div class="relative bg-gradient-to-br from-emerald-100 to-teal-100">
                  <div class="aspect-[16/9]"></div>
                  <div class="absolute inset-0 flex items-start justify-between p-4">
                    <span class={`rounded-full px-3 py-1 text-xs font-semibold
                      ${facility.data.availability === 'accepting' ? 'bg-green-100 text-green-800' :
                         facility.data.availability === 'waitlist' ? 'bg-yellow-100 text-yellow-800' :
                         'bg-red-100 text-red-800'}`}>
                      {facility.data.availability === 'accepting' ? 'Available' : facility.data.availability === 'waitlist' ? 'Waitlist' : 'Full'}
                    </span>
                    {facility.data.capacity && (
                      <span class="rounded-full bg-white/80 px-3 py-1 text-xs font-semibold text-gray-800 border border-gray-200">Cap. {facility.data.capacity}</span>
                    )}
                  </div>
                </div>

                <div class="p-6">
