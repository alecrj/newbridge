---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

// Get residents data (would be from CMS in production)
const residents = await getCollection('residents').catch(() => []);
---

<BaseLayout title="Residents Management | NewBridge Living CRM">
  <!-- Professional CRM Header -->
  <section class="bg-gradient-to-r from-emerald-900 to-emerald-800 py-8">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-3xl font-bold text-white">Residents Management</h1>
          <p class="text-emerald-200 mt-2">Track progress, compliance, and daily activities for current residents</p>
        </div>
        <div class="flex items-center space-x-4">
          <button 
            id="generateReport"
            class="bg-emerald-600 hover:bg-emerald-700 text-white px-6 py-3 rounded-lg font-semibold transition-all duration-300 flex items-center"
          >
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 17v-2m3 2v-4m3 4v-6m2 10H7a4 4 0 01-4-4V5a3 3 0 013-3h4l2 2h6a2 2 0 012 2v11a1 1 0 01-1 1z"></path>
            </svg>
            Generate Report
          </button>
          <button 
            id="addResident"
            class="bg-white text-emerald-800 px-6 py-3 rounded-lg font-semibold hover:bg-emerald-50 transition-all duration-300 flex items-center"
          >
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
            </svg>
            Add Resident
          </button>
        </div>
      </div>
    </div>
  </section>

  <!-- Real-Time Dashboard Stats -->
  <section class="bg-white py-8 border-b">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 md:grid-cols-5 gap-6">
        <!-- Total Residents -->
        <div class="bg-gradient-to-br from-blue-50 to-blue-100 rounded-2xl p-6 border border-blue-200/50">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-blue-600 font-semibold text-sm uppercase tracking-wide">Total Residents</p>
              <p class="text-3xl font-bold text-blue-700" id="totalResidents">23</p>
              <p class="text-blue-600 text-sm">Across all facilities</p>
            </div>
            <div class="bg-blue-500 rounded-full p-3">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
              </svg>
            </div>
          </div>
        </div>

        <!-- Compliance Rate -->
        <div class="bg-gradient-to-br from-emerald-50 to-emerald-100 rounded-2xl p-6 border border-emerald-200/50">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-emerald-600 font-semibold text-sm uppercase tracking-wide">Compliance Rate</p>
              <p class="text-3xl font-bold text-emerald-700" id="complianceRate">94%</p>
              <p class="text-emerald-600 text-sm">This week</p>
            </div>
            <div class="bg-emerald-500 rounded-full p-3">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
          </div>
        </div>

        <!-- Drug Tests -->
        <div class="bg-gradient-to-br from-purple-50 to-purple-100 rounded-2xl p-6 border border-purple-200/50">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-purple-600 font-semibold text-sm uppercase tracking-wide">Tests This Week</p>
              <p class="text-3xl font-bold text-purple-700" id="drugTests">18</p>
              <p class="text-purple-600 text-sm">16 passed, 2 pending</p>
            </div>
            <div class="bg-purple-500 rounded-full p-3">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"></path>
              </svg>
            </div>
          </div>
        </div>

        <!-- Payment Status -->
        <div class="bg-gradient-to-br from-yellow-50 to-yellow-100 rounded-2xl p-6 border border-yellow-200/50">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-yellow-600 font-semibold text-sm uppercase tracking-wide">Payment Issues</p>
              <p class="text-3xl font-bold text-yellow-700" id="paymentIssues">3</p>
              <p class="text-yellow-600 text-sm">Require follow-up</p>
            </div>
            <div class="bg-yellow-500 rounded-full p-3">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
              </svg>
            </div>
          </div>
        </div>

        <!-- Bed Availability -->
        <div class="bg-gradient-to-br from-gray-50 to-gray-100 rounded-2xl p-6 border border-gray-200/50">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-gray-600 font-semibold text-sm uppercase tracking-wide">Beds Available</p>
              <p class="text-3xl font-bold text-gray-700" id="availableBeds">5</p>
              <p class="text-gray-600 text-sm">Out of 28 total</p>
            </div>
            <div class="bg-gray-500 rounded-full p-3">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
              </svg>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Quick Actions & Filters -->
  <section class="bg-gray-50 py-6">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="bg-white rounded-2xl shadow-sm border border-gray-200 p-6">
        <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between space-y-4 lg:space-y-0">
          <div class="flex flex-col sm:flex-row space-y-3 sm:space-y-0 sm:space-x-4">
            <input 
              type="text" 
              id="searchResidents" 
              placeholder="Search by name, room, or facility..."
              class="flex-1 px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500 min-w-80"
            />
            
            <select id="facilityFilter" class="px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500">
              <option value="">All Facilities</option>
              <option value="main-house">Main House</option>
              <option value="second-house">Second House</option>
            </select>
            
            <select id="statusFilter" class="px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500">
              <option value="">All Statuses</option>
              <option value="active">Active</option>
              <option value="suspended">Suspended</option>
              <option value="notice">30-Day Notice</option>
            </select>
          </div>
          
          <div class="flex items-center space-x-3">
            <button 
              id="quickCheckin"
              class="bg-emerald-600 hover:bg-emerald-700 text-white px-4 py-2 rounded-lg font-medium transition-all duration-300"
            >
              Quick Check-in
            </button>
            <button 
              id="drugTestAlert"
              class="bg-purple-600 hover:bg-purple-700 text-white px-4 py-2 rounded-lg font-medium transition-all duration-300"
            >
              Drug Test
            </button>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Residents Grid/Table -->
  <section class="py-8">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Tab Navigation -->
      <div class="mb-6">
        <div class="border-b border-gray-200">
          <nav class="-mb-px flex space-x-8">
            <button id="gridViewTab" class="tab-button active border-emerald-500 text-emerald-600 whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm">
              Grid View
            </button>
            <button id="tableViewTab" class="tab-button border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm">
              Table View
            </button>
            <button id="complianceTab" class="tab-button border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm">
              Compliance Dashboard
            </button>
          </nav>
        </div>
      </div>

      <!-- Grid View -->
      <div id="gridView" class="tab-content">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
          <!-- Sample Resident Cards -->
          <div class="bg-white rounded-2xl shadow-sm border border-gray-200 p-6 hover:shadow-lg transition-all duration-300">
            <div class="flex items-center justify-between mb-4">
              <div class="flex items-center">
                <div class="w-12 h-12 bg-emerald-100 rounded-full flex items-center justify-center mr-3">
                  <span class="text-emerald-600 font-bold text-lg">JD</span>
                </div>
                <div>
                  <h3 class="font-bold text-gray-900">John Doe</h3>
                  <p class="text-sm text-gray-500">Room 101 • Main House</p>
                </div>
              </div>
              <div class="text-right">
                <span class="inline-flex px-2 py-1 text-xs font-medium bg-emerald-100 text-emerald-800 rounded-full">
                  Active
                </span>
              </div>
            </div>
            
            <div class="space-y-3">
              <div class="flex items-center justify-between text-sm">
                <span class="text-gray-600">Days in Program:</span>
                <span class="font-semibold text-gray-900">67 days</span>
              </div>
              <div class="flex items-center justify-between text-sm">
                <span class="text-gray-600">Last Check-in:</span>
                <span class="font-semibold text-gray-900">Today 9:00 PM</span>
              </div>
              <div class="flex items-center justify-between text-sm">
                <span class="text-gray-600">Compliance Score:</span>
                <span class="font-semibold text-emerald-600">98%</span>
              </div>
              <div class="flex items-center justify-between text-sm">
                <span class="text-gray-600">Rent Status:</span>
                <span class="font-semibold text-emerald-600">Paid</span>
              </div>
            </div>

            <div class="mt-4 pt-4 border-t border-gray-100">
              <div class="flex items-center justify-between">
                <div class="flex items-center space-x-2">
                  <div class="w-2 h-2 bg-emerald-500 rounded-full"></div>
                  <span class="text-xs text-gray-600">Last Drug Test: Clean</span>
                </div>
                <button class="text-emerald-600 hover:text-emerald-800 text-sm font-medium">
                  View Profile
                </button>
              </div>
            </div>
          </div>

          <div class="bg-white rounded-2xl shadow-sm border border-gray-200 p-6 hover:shadow-lg transition-all duration-300">
            <div class="flex items-center justify-between mb-4">
              <div class="flex items-center">
                <div class="w-12 h-12 bg-blue-100 rounded-full flex items-center justify-center mr-3">
                  <span class="text-blue-600 font-bold text-lg">MS</span>
                </div>
                <div>
                  <h3 class="font-bold text-gray-900">Mike Smith</h3>
                  <p class="text-sm text-gray-500">Room 203 • Main House</p>
                </div>
              </div>
              <div class="text-right">
                <span class="inline-flex px-2 py-1 text-xs font-medium bg-yellow-100 text-yellow-800 rounded-full">
                  Warning
                </span>
              </div>
            </div>
            
            <div class="space-y-3">
              <div class="flex items-center justify-between text-sm">
                <span class="text-gray-600">Days in Program:</span>
                <span class="font-semibold text-gray-900">34 days</span>
              </div>
              <div class="flex items-center justify-between text-sm">
                <span class="text-gray-600">Last Check-in:</span>
                <span class="font-semibold text-red-600">Late (11:47 PM)</span>
              </div>
              <div class="flex items-center justify-between text-sm">
                <span class="text-gray-600">Compliance Score:</span>
                <span class="font-semibold text-yellow-600">82%</span>
              </div>
              <div class="flex items-center justify-between text-sm">
                <span class="text-gray-600">Rent Status:</span>
                <span class="font-semibold text-red-600">Due Tomorrow</span>
              </div>
            </div>

            <div class="mt-4 pt-4 border-t border-gray-100">
              <div class="flex items-center justify-between">
                <div class="flex items-center space-x-2">
                  <div class="w-2 h-2 bg-yellow-500 rounded-full"></div>
                  <span class="text-xs text-gray-600">Drug Test: Due</span>
                </div>
                <button class="text-emerald-600 hover:text-emerald-800 text-sm font-medium">
                  View Profile
                </button>
              </div>
            </div>
          </div>

          <div class="bg-white rounded-2xl shadow-sm border border-gray-200 p-6 hover:shadow-lg transition-all duration-300">
            <div class="flex items-center justify-between mb-4">
              <div class="flex items-center">
                <div class="w-12 h-12 bg-purple-100 rounded-full flex items-center justify-center mr-3">
                  <span class="text-purple-600 font-bold text-lg">RW</span>
                </div>
                <div>
                  <h3 class="font-bold text-gray-900">Robert Wilson</h3>
                  <p class="text-sm text-gray-500">Room 105 • Main House</p>
                </div>
              </div>
              <div class="text-right">
                <span class="inline-flex px-2 py-1 text-xs font-medium bg-emerald-100 text-emerald-800 rounded-full">
                  Active
                </span>
              </div>
            </div>
            
            <div class="space-y-3">
              <div class="flex items-center justify-between text-sm">
                <span class="text-gray-600">Days in Program:</span>
                <span class="font-semibold text-gray-900">128 days</span>
              </div>
              <div class="flex items-center justify-between text-sm">
                <span class="text-gray-600">Last Check-in:</span>
                <span class="font-semibold text-gray-900">Today 8:45 PM</span>
              </div>
              <div class="flex items-center justify-between text-sm">
                <span class="text-gray-600">Compliance Score:</span>
                <span class="font-semibold text-emerald-600">96%</span>
              </div>
              <div class="flex items-center justify-between text-sm">
                <span class="text-gray-600">Rent Status:</span>
                <span class="font-semibold text-emerald-600">Paid</span>
              </div>
            </div>

            <div class="mt-4 pt-4 border-t border-gray-100">
              <div class="flex items-center justify-between">
                <div class="flex items-center space-x-2">
                  <div class="w-2 h-2 bg-emerald-500 rounded-full"></div>
                  <span class="text-xs text-gray-600">Last Drug Test: Clean</span>
                </div>
                <button class="text-emerald-600 hover:text-emerald-800 text-sm font-medium">
                  View Profile
                </button>
              </div>
            </div>
          </div>

          <!-- Add more resident cards as needed -->
        </div>
      </div>

      <!-- Table View -->
      <div id="tableView" class="tab-content hidden">
        <div class="bg-white rounded-2xl shadow-sm border border-gray-200 overflow-hidden">
          <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
              <thead class="bg-gray-50">
                <tr>
                  <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                    Resident
                  </th>
                  <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                    Room & Facility
                  </th>
                  <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                    Status & Compliance
                  </th>
                  <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                    Check-in Status
                  </th>
                  <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                    Payment Status
                  </th>
                  <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                    Actions
                  </th>
                </tr>
              </thead>
              <tbody class="bg-white divide-y divide-gray-200">
                <tr class="hover:bg-gray-50 transition-colors duration-200">
                  <td class="px-6 py-4">
                    <div class="flex items-center">
                      <div class="w-10 h-10 bg-emerald-100 rounded-full flex items-center justify-center mr-4">
                        <span class="text-emerald-600 font-semibold text-sm">JD</span>
                      </div>
                      <div>
                        <div class="font-semibold text-gray-900">John Doe</div>
                        <div class="text-gray-500 text-sm">67 days in program</div>
                      </div>
                    </div>
                  </td>
                  <td class="px-6 py-4">
                    <div class="text-sm text-gray-900">Room 101</div>
                    <div class="text-sm text-gray-500">Main House</div>
                  </td>
                  <td class="px-6 py-4">
                    <div class="flex flex-col space-y-2">
                      <span class="inline-flex px-2 py-1 text-xs font-medium bg-emerald-100 text-emerald-800 rounded-full w-fit">
                        Active
                      </span>
                      <span class="text-sm text-emerald-600 font-semibold">98% Compliant</span>
                    </div>
                  </td>
                  <td class="px-6 py-4">
                    <div class="text-sm text-gray-900">Today 9:00 PM</div>
                    <div class="text-sm text-emerald-500">✓ On Time</div>
                  </td>
                  <td class="px-6 py-4">
                    <div class="text-sm text-emerald-600 font-semibold">Paid</div>
                    <div class="text-sm text-gray-500">Next: Sep 1</div>
                  </td>
                  <td class="px-6 py-4">
                    <div class="flex items-center space-x-2">
                      <button class="text-emerald-600 hover:text-emerald-800 font-medium text-sm">
                        View
                      </button>
                      <button class="text-blue-600 hover:text-blue-800 font-medium text-sm">
                        Notes
                      </button>
                      <button class="text-purple-600 hover:text-purple-800 font-medium text-sm">
                        Test
                      </button>
                    </div>
                  </td>
                </tr>
                <!-- Additional table rows would go here -->
              </tbody>
            </table>
          </div>
        </div>
      </div>

      <!-- Compliance Dashboard -->
      <div id="complianceView" class="tab-content hidden">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
          <!-- Recent Drug Tests -->
          <div class="bg-white rounded-2xl shadow-sm border border-gray-200 p-6">
            <h3 class="text-lg font-bold text-gray-900 mb-4">Recent Drug Tests</h3>
            <div class="space-y-4">
              <div class="flex items-center justify-between p-4 bg-emerald-50 rounded-lg border border-emerald-200">
                <div class="flex items-center">
                  <div class="w-8 h-8 bg-emerald-500 rounded-full flex items-center justify-center mr-3">
                    <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                  </div>
                  <div>
                    <div class="font-semibold text-gray-900">John Doe - Passed</div>
                    <div class="text-sm text-gray-600">Today 2:30 PM • Urinalysis</div>
                  </div>
                </div>
              </div>
              
              <div class="flex items-center justify-between p-4 bg-yellow-50 rounded-lg border border-yellow-200">
                <div class="flex items-center">
                  <div class="w-8 h-8 bg-yellow-500 rounded-full flex items-center justify-center mr-3">
                    <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                  </div>
                  <div>
                    <div class="font-semibold text-gray-900">Mike Smith - Pending</div>
                    <div class="text-sm text-gray-600">Today 1:00 PM • Breathalyzer</div>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Compliance Violations -->
          <div class="bg-white rounded-2xl shadow-sm border border-gray-200 p-6">
            <h3 class="text-lg font-bold text-gray-900 mb-4">Recent Violations</h3>
            <div class="space-y-4">
              <div class="flex items-center justify-between p-4 bg-red-50 rounded-lg border border-red-200">
                <div class="flex items-center">
                  <div class="w-8 h-8 bg-red-500 rounded-full flex items-center justify-center mr-3">
                    <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                  </div>
                  <div>
                    <div class="font-semibold text-gray-900">Mike Smith - Late Curfew</div>
                    <div class="text-sm text-gray-600">Yesterday 11:47 PM • 47 minutes late</div>
                  </div>
                </div>
              </div>
              
              <div class="flex items-center justify-between p-4 bg-orange-50 rounded-lg border border-orange-200">
                <div class="flex items-center">
