---
import BaseLayout from '../../layouts/BaseLayout.astro';
import SimpleAuth from '../../components/SimpleAuth.astro';
import { getCollection } from 'astro:content';

// Get leads data (would be from CMS in production)
const leads = await getCollection('leads').catch(() => []);
---

<BaseLayout title="Leads Management | NewBridge Living CRM">
  <SimpleAuth />

  <!-- Professional CRM Header -->
  <section class="bg-gradient-to-r from-emerald-900 to-emerald-800 py-8">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-3xl font-bold text-white">Leads Management</h1>
          <p class="mt-2 text-emerald-200">
            Track and manage potential residents through the admissions process
          </p>
        </div>
        <div class="flex items-center space-x-4">
          <button
            id="exportLeads"
            class="flex items-center rounded-lg bg-emerald-600 px-6 py-3 font-semibold text-white transition-all duration-300 hover:bg-emerald-700"
          >
            <svg class="mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
              ></path>
            </svg>
            Export Data
          </button>
          <button
            id="addLead"
            class="flex items-center rounded-lg bg-white px-6 py-3 font-semibold text-emerald-800 transition-all duration-300 hover:bg-emerald-50"
          >
            <svg class="mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
            </svg>
            Add Lead
          </button>
        </div>
      </div>
    </div>
  </section>

  <!-- CRM Dashboard Stats -->
  <section class="border-b bg-white py-8">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 gap-6 md:grid-cols-4">
        <!-- New Leads -->
        <div
          class="rounded-2xl border border-blue-200/50 bg-gradient-to-br from-blue-50 to-blue-100 p-6"
        >
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm font-semibold uppercase tracking-wide text-blue-600">New Leads</p>
              <p class="text-3xl font-bold text-blue-700" id="newLeadsCount">12</p>
              <p class="text-sm text-blue-600">This week</p>
            </div>
            <div class="rounded-full bg-blue-500 p-3">
              <svg class="h-6 w-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"
                ></path>
              </svg>
            </div>
          </div>
        </div>

        <!-- Follow-ups Due -->
        <div
          class="rounded-2xl border border-amber-200/50 bg-gradient-to-br from-amber-50 to-amber-100 p-6"
        >
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm font-semibold uppercase tracking-wide text-amber-600">
                Follow-ups Due
              </p>
              <p class="text-3xl font-bold text-amber-700" id="followupsDue">8</p>
              <p class="text-sm text-amber-600">Urgent</p>
            </div>
            <div class="rounded-full bg-amber-500 p-3">
              <svg class="h-6 w-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
          </div>
        </div>

        <!-- Qualified Leads -->
        <div
          class="rounded-2xl border border-emerald-200/50 bg-gradient-to-br from-emerald-50 to-emerald-100 p-6"
        >
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm font-semibold uppercase tracking-wide text-emerald-600">
                Qualified
              </p>
              <p class="text-3xl font-bold text-emerald-700" id="qualifiedLeads">5</p>
              <p class="text-sm text-emerald-600">Ready to admit</p>
            </div>
            <div class="rounded-full bg-emerald-500 p-3">
              <svg class="h-6 w-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
          </div>
        </div>

        <!-- Conversion Rate -->
        <div
          class="rounded-2xl border border-purple-200/50 bg-gradient-to-br from-purple-50 to-purple-100 p-6"
        >
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm font-semibold uppercase tracking-wide text-purple-600">
                Conversion Rate
              </p>
              <p class="text-3xl font-bold text-purple-700" id="conversionRate">42%</p>
              <p class="text-sm text-purple-600">This month</p>
            </div>
            <div class="rounded-full bg-purple-500 p-3">
              <svg class="h-6 w-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
              </svg>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Enhanced Filters Section -->
  <section class="bg-gray-50 py-6">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="rounded-2xl border border-gray-200 bg-white p-6 shadow-sm">
        <div
          class="flex flex-col space-y-4 lg:flex-row lg:items-center lg:justify-between lg:space-x-4 lg:space-y-0"
        >
          <!-- Search -->
          <div class="max-w-md flex-1">
            <label for="searchLeads" class="sr-only">Search leads</label>
            <div class="relative">
              <div class="pointer-events-none absolute inset-y-0 left-0 flex items-center pl-3">
                <svg
                  class="h-5 w-5 text-gray-400"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                </svg>
              </div>
              <input
                id="searchLeads"
                type="text"
                placeholder="Search by name, email, or phone..."
                class="block w-full rounded-xl border border-gray-300 py-3 pl-10 pr-3 text-sm placeholder-gray-500 focus:border-emerald-500 focus:outline-none focus:ring-2 focus:ring-emerald-500"
              />
            </div>
          </div>

          <!-- Filters -->
          <div class="flex flex-col space-y-2 sm:flex-row sm:space-x-3 sm:space-y-0">
            <select
              id="statusFilter"
              class="rounded-xl border border-gray-300 px-4 py-3 text-sm focus:border-emerald-500 focus:outline-none focus:ring-2 focus:ring-emerald-500"
            >
              <option value="">All Statuses</option>
              <option value="new">New</option>
              <option value="contacted">Contacted</option>
              <option value="qualified">Qualified</option>
              <option value="scheduled">Scheduled</option>
              <option value="admitted">Admitted</option>
            </select>

            <select
              id="priorityFilter"
              class="rounded-xl border border-gray-300 px-4 py-3 text-sm focus:border-emerald-500 focus:outline-none focus:ring-2 focus:ring-emerald-500"
            >
              <option value="">All Priorities</option>
              <option value="urgent">Urgent</option>
              <option value="high">High</option>
              <option value="medium">Medium</option>
              <option value="low">Low</option>
            </select>

            <input
              id="dateFilter"
              type="date"
              class="rounded-xl border border-gray-300 px-4 py-3 text-sm focus:border-emerald-500 focus:outline-none focus:ring-2 focus:ring-emerald-500"
            />

            <button
              id="clearFilters"
              class="rounded-xl bg-gray-100 px-4 py-3 text-sm font-medium text-gray-600 transition-colors duration-200 hover:bg-gray-200"
            >
              Clear
            </button>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Enhanced Leads Table -->
  <section class="py-8">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="overflow-hidden rounded-2xl border border-gray-200 bg-white shadow-sm">
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th
                  class="px-6 py-4 text-left text-xs font-semibold uppercase tracking-wider text-gray-500"
                  >Contact Information</th
                >
                <th
                  class="px-6 py-4 text-left text-xs font-semibold uppercase tracking-wider text-gray-500"
                  >Status & Priority</th
                >
                <th
                  class="px-6 py-4 text-left text-xs font-semibold uppercase tracking-wider text-gray-500"
                  >Program Interest</th
                >
                <th
                  class="px-6 py-4 text-left text-xs font-semibold uppercase tracking-wider text-gray-500"
                  >Source & Date</th
                >
                <th
                  class="px-6 py-4 text-left text-xs font-semibold uppercase tracking-wider text-gray-500"
                  >Actions</th
                >
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-200 bg-white">
              <!-- Lead Entry 1 -->
              <tr class="transition-colors duration-200 hover:bg-gray-50">
                <td class="px-6 py-4">
                  <div class="flex items-center">
                    <div
                      class="mr-4 flex h-10 w-10 items-center justify-center rounded-full bg-emerald-600 font-bold text-white"
                    >
                      SM
                    </div>
                    <div>
                      <div class="text-sm font-semibold text-gray-900">Sarah Mitchell</div>
                      <div class="text-sm text-gray-500">sarah.mitchell@email.com</div>
                      <div class="text-sm text-gray-500">(850) 555-0123</div>
                    </div>
                  </div>
                </td>
                <td class="px-6 py-4">
                  <div class="flex flex-col space-y-2">
                    <span
                      class="inline-flex items-center rounded-full bg-blue-100 px-2.5 py-0.5 text-xs font-medium text-blue-800"
                    >
                      New Inquiry
                    </span>
                    <span
                      class="inline-flex items-center rounded-full bg-amber-100 px-2.5 py-0.5 text-xs font-medium text-amber-800"
                    >
                      High Priority
                    </span>
                  </div>
                </td>
                <td class="px-6 py-4 text-sm text-gray-900">
                  <div>Standard Care</div>
                  <div class="text-xs text-gray-500">3-6 month program</div>
                </td>
                <td class="px-6 py-4 text-sm">
                  <div class="text-gray-900">Website Form</div>
                  <div class="text-gray-500">Aug 20, 2025</div>
                </td>
                <td class="px-6 py-4 text-sm">
                  <div class="flex space-x-2">
                    <button class="font-medium text-emerald-600 hover:text-emerald-700"
                      >Contact</button
                    >
                    <button class="font-medium text-blue-600 hover:text-blue-700">Schedule</button>
                    <button class="font-medium text-gray-600 hover:text-gray-700">Notes</button>
                  </div>
                </td>
              </tr>

              <!-- Lead Entry 2 -->
              <tr class="transition-colors duration-200 hover:bg-gray-50">
                <td class="px-6 py-4">
                  <div class="flex items-center">
                    <div
                      class="mr-4 flex h-10 w-10 items-center justify-center rounded-full bg-blue-600 font-bold text-white"
                    >
                      DJ
                    </div>
                    <div>
                      <div class="text-sm font-semibold text-gray-900">David Johnson</div>
                      <div class="text-sm text-gray-500">d.johnson@email.com</div>
                      <div class="text-sm text-gray-500">(850) 555-0456</div>
                    </div>
                  </div>
                </td>
                <td class="px-6 py-4">
                  <div class="flex flex-col space-y-2">
                    <span
                      class="inline-flex items-center rounded-full bg-amber-100 px-2.5 py-0.5 text-xs font-medium text-amber-800"
                    >
                      Follow-up Due
                    </span>
                    <span
                      class="inline-flex items-center rounded-full bg-gray-100 px-2.5 py-0.5 text-xs font-medium text-gray-800"
                    >
                      Medium Priority
                    </span>
                  </div>
                </td>
                <td class="px-6 py-4 text-sm text-gray-900">
                  <div>Transitional Living</div>
                  <div class="text-xs text-gray-500">Long-term support</div>
                </td>
                <td class="px-6 py-4 text-sm">
                  <div class="text-gray-900">Referral</div>
                  <div class="text-gray-500">Aug 18, 2025</div>
                </td>
                <td class="px-6 py-4 text-sm">
                  <div class="flex space-x-2">
                    <button class="font-medium text-emerald-600 hover:text-emerald-700">View</button
                    >
                    <button class="font-medium text-blue-600 hover:text-blue-700">Reschedule</button
                    >
                    <button class="font-medium text-gray-600 hover:text-gray-700">Notes</button>
                  </div>
                </td>
              </tr>

              <!-- Lead Entry 3 -->
              <tr class="transition-colors duration-200 hover:bg-gray-50">
                <td class="px-6 py-4">
                  <div class="flex items-center">
                    <div
                      class="mr-4 flex h-10 w-10 items-center justify-center rounded-full bg-purple-600 font-bold text-white"
                    >
                      AK
                    </div>
                    <div>
                      <div class="text-sm font-semibold text-gray-900">Alex Kim</div>
                      <div class="text-sm text-gray-500">alex.kim@email.com</div>
                      <div class="text-sm text-gray-500">(850) 555-0789</div>
                    </div>
                  </div>
                </td>
                <td class="px-6 py-4">
                  <div class="flex flex-col space-y-2">
                    <span
                      class="inline-flex items-center rounded-full bg-green-100 px-2.5 py-0.5 text-xs font-medium text-green-800"
                    >
                      Qualified
                    </span>
                    <span
                      class="inline-flex items-center rounded-full bg-red-100 px-2.5 py-0.5 text-xs font-medium text-red-800"
                    >
                      Urgent
                    </span>
                  </div>
                </td>
                <td class="px-6 py-4 text-sm text-gray-900">
                  <div>Extended Care</div>
                  <div class="text-xs text-gray-500">6-month program</div>
                </td>
                <td class="px-6 py-4 text-sm">
                  <div class="text-gray-900">Phone Inquiry</div>
                  <div class="text-gray-500">Aug 17, 2025</div>
                </td>
                <td class="px-6 py-4 text-sm">
                  <div class="flex space-x-2">
                    <button class="font-medium text-emerald-600 hover:text-emerald-700"
                      >Admit</button
                    >
                    <button class="font-medium text-blue-600 hover:text-blue-700">Review</button>
                    <button class="font-medium text-gray-600 hover:text-gray-700">Notes</button>
                  </div>
                </td>
              </tr>
            </tbody>
          </table>
        </div>

        <!-- Pagination -->
        <div class="border-t border-gray-200 bg-white px-4 py-3 sm:px-6">
          <div class="flex items-center justify-between">
            <div class="text-sm text-gray-700">
              Showing <span class="font-medium">1</span> to <span class="font-medium">3</span> of <span
                class="font-medium">25</span
              > results
            </div>
            <div class="flex space-x-2">
              <button
                class="rounded-lg border border-emerald-300 bg-white px-3 py-2 text-sm font-medium text-emerald-600 hover:bg-emerald-50"
              >
                Previous
              </button>
              <button
                class="rounded-lg border border-emerald-600 bg-emerald-600 px-3 py-2 text-sm font-medium text-white"
              >
                1
              </button>
              <button
                class="rounded-lg border border-gray-300 bg-white px-3 py-2 text-sm font-medium text-gray-500 hover:bg-gray-50"
              >
                2
              </button>
              <button
                class="rounded-lg border border-gray-300 bg-white px-3 py-2 text-sm font-medium text-gray-500 hover:bg-gray-50"
              >
                3
              </button>
              <button
                class="rounded-lg border border-gray-300 bg-white px-3 py-2 text-sm font-medium text-gray-500 hover:bg-gray-50"
              >
                Next
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- FIXED: Enhanced Add Lead Modal - No more CSS conflicts -->
  <div
    id="addLeadModal"
    class="invisible fixed inset-0 z-50 flex items-center justify-center bg-black/60 p-4 opacity-0 backdrop-blur-sm transition-all duration-300"
  >
    <div
      class="max-h-[90vh] w-full max-w-2xl scale-95 transform overflow-hidden rounded-3xl bg-white shadow-2xl transition-transform duration-300"
      id="modal-content"
    >
      <!-- Modal Header -->
      <div class="border-b border-emerald-100 bg-gradient-to-r from-emerald-50 to-teal-50 p-6">
        <div class="flex items-center justify-between">
          <div class="flex items-center space-x-3">
            <div
              class="flex h-12 w-12 items-center justify-center rounded-2xl bg-gradient-to-br from-emerald-500 to-teal-500 shadow-lg"
            >
              <svg class="h-6 w-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"
                ></path>
              </svg>
            </div>
            <div>
              <h3 class="text-2xl font-bold text-gray-900">Add New Lead</h3>
              <p class="font-medium text-emerald-600">Grow NewBridge Living</p>
            </div>
          </div>
          <button
            id="closeModal"
            class="group rounded-full p-2 text-gray-400 transition-all duration-200 hover:bg-gray-100 hover:text-gray-600"
          >
            <svg
              class="h-6 w-6 transition-transform duration-300 group-hover:rotate-90"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M6 18L18 6M6 6l12 12"></path>
            </svg>
          </button>
        </div>
      </div>

      <!-- Modal Body -->
      <div class="max-h-[calc(90vh-120px)] overflow-y-auto">
        <form id="addLeadForm" class="space-y-6 p-6">
          <!-- Personal Information Section -->
          <div class="space-y-4">
            <div class="mb-4 flex items-center space-x-2">
              <div class="h-2 w-2 rounded-full bg-emerald-500"></div>
              <h4 class="text-lg font-bold text-gray-900">Personal Information</h4>
            </div>

            <div class="grid grid-cols-1 gap-6 md:grid-cols-2">
              <div class="space-y-2">
                <label class="block text-sm font-bold text-gray-700">First Name *</label>
                <input
                  type="text"
                  name="firstName"
                  required
                  class="w-full rounded-xl border-2 border-gray-200 px-4 py-3 transition-all duration-300 hover:border-emerald-300 focus:border-emerald-500 focus:ring-2 focus:ring-emerald-500"
                  placeholder="Enter first name"
                />
              </div>
              <div class="space-y-2">
                <label class="block text-sm font-bold text-gray-700">Last Name *</label>
                <input
                  type="text"
                  name="lastName"
                  required
                  class="w-full rounded-xl border-2 border-gray-200 px-4 py-3 transition-all duration-300 hover:border-emerald-300 focus:border-emerald-500 focus:ring-2 focus:ring-emerald-500"
                  placeholder="Enter last name"
                />
              </div>
            </div>

            <div class="grid grid-cols-1 gap-6 md:grid-cols-2">
              <div class="space-y-2">
                <label class="block text-sm font-bold text-gray-700">Email Address *</label>
                <input
                  type="email"
                  name="email"
                  required
                  class="w-full rounded-xl border-2 border-gray-200 px-4 py-3 transition-all duration-300 hover:border-emerald-300 focus:border-emerald-500 focus:ring-2 focus:ring-emerald-500"
                  placeholder="email@example.com"
                />
              </div>
              <div class="space-y-2">
                <label class="block text-sm font-bold text-gray-700">Phone Number *</label>
                <input
                  type="tel"
                  name="phone"
                  required
                  class="w-full rounded-xl border-2 border-gray-200 px-4 py-3 transition-all duration-300 hover:border-emerald-300 focus:border-emerald-500 focus:ring-2 focus:ring-emerald-500"
                  placeholder="(850) 555-0123"
                />
              </div>
            </div>
          </div>

          <!-- Program Interest Section -->
          <div class="space-y-4">
            <div class="mb-4 flex items-center space-x-2">
              <div class="h-2 w-2 rounded-full bg-teal-500"></div>
              <h4 class="text-lg font-bold text-gray-900">Program Interest</h4>
            </div>

            <div class="grid grid-cols-1 gap-6 md:grid-cols-2">
              <div class="space-y-2">
                <label class="block text-sm font-bold text-gray-700">Program Type</label>
                <select
                  name="program"
                  class="w-full rounded-xl border-2 border-gray-200 px-4 py-3 transition-all duration-300 hover:border-emerald-300 focus:border-emerald-500 focus:ring-2 focus:ring-emerald-500"
                >
                  <option value="">Select a program</option>
                  <option value="standard">Standard Care (3-6 months)</option>
                  <option value="extended">Extended Care (6-12 months)</option>
                  <option value="transitional">Transitional Living</option>
                  <option value="outpatient">Outpatient Support</option>
                </select>
              </div>
              <div class="space-y-2">
                <label class="block text-sm font-bold text-gray-700">Source</label>
                <select
                  name="source"
                  class="w-full rounded-xl border-2 border-gray-200 px-4 py-3 transition-all duration-300 hover:border-emerald-300 focus:border-emerald-500 focus:ring-2 focus:ring-emerald-500"
                >
                  <option value="">How did they find us?</option>
                  <option value="website">Website</option>
                  <option value="phone">Phone Inquiry</option>
                  <option value="referral">Professional Referral</option>
                  <option value="social">Social Media</option>
                  <option value="word-of-mouth">Word of Mouth</option>
                  <option value="other">Other</option>
                </select>
              </div>
            </div>
          </div>

          <!-- Priority and Status Section -->
          <div class="space-y-4">
            <div class="mb-4 flex items-center space-x-2">
              <div class="h-2 w-2 rounded-full bg-blue-500"></div>
              <h4 class="text-lg font-bold text-gray-900">Priority & Status</h4>
            </div>

            <div class="grid grid-cols-1 gap-6 md:grid-cols-2">
              <div class="space-y-2">
                <label class="block text-sm font-bold text-gray-700">Priority Level</label>
                <select
                  name="priority"
                  class="w-full rounded-xl border-2 border-gray-200 px-4 py-3 transition-all duration-300 hover:border-emerald-300 focus:border-emerald-500 focus:ring-2 focus:ring-emerald-500"
                >
                  <option value="low">Low Priority</option>
                  <option value="medium" selected>Medium Priority</option>
                  <option value="high">High Priority</option>
                  <option value="urgent">Urgent</option>
                </select>
              </div>
              <div class="space-y-2">
                <label class="block text-sm font-bold text-gray-700">Initial Status</label>
                <select
                  name="status"
                  class="w-full rounded-xl border-2 border-gray-200 px-4 py-3 transition-all duration-300 hover:border-emerald-300 focus:border-emerald-500 focus:ring-2 focus:ring-emerald-500"
                >
                  <option value="inquiry" selected>Initial Inquiry</option>
                  <option value="screening">Screening Scheduled</option>
                  <option value="qualified">Pre-Qualified</option>
                  <option value="follow-up">Follow-up Needed</option>
                </select>
              </div>
            </div>
          </div>

          <!-- Notes Section -->
          <div class="space-y-4">
            <div class="mb-4 flex items-center space-x-2">
              <div class="h-2 w-2 rounded-full bg-purple-500"></div>
              <h4 class="text-lg font-bold text-gray-900">Additional Notes</h4>
            </div>

            <div class="space-y-2">
              <label class="block text-sm font-bold text-gray-700">Notes & Comments</label>
              <textarea
                name="notes"
                rows="4"
                class="w-full resize-none rounded-xl border-2 border-gray-200 px-4 py-3 transition-all duration-300 hover:border-emerald-300 focus:border-emerald-500 focus:ring-2 focus:ring-emerald-500"
                placeholder="Additional notes, special considerations, or important details..."
              ></textarea>
            </div>
          </div>
        </form>
      </div>

      <!-- Modal Footer -->
      <div class="flex items-center justify-between border-t border-gray-100 bg-gray-50 px-6 py-4">
        <button
          type="button"
          id="cancelLead"
          class="flex items-center space-x-2 rounded-xl border-2 border-gray-300 px-6 py-3 font-bold text-gray-700 transition-all duration-300 hover:border-gray-400 hover:bg-gray-100"
        >
          <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M6 18L18 6M6 6l12 12"></path>
          </svg>
          <span>Cancel</span>
        </button>

        <button
          type="submit"
          form="addLeadForm"
          class="flex transform items-center space-x-2 rounded-xl bg-gradient-to-r from-emerald-600 to-teal-600 px-8 py-3 font-bold text-white shadow-lg transition-all duration-300 hover:scale-105 hover:from-emerald-700 hover:to-teal-700 hover:shadow-emerald-500/25"
        >
          <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
          </svg>
          <span>Add Lead</span>
        </button>
      </div>
    </div>
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', function () {
      // Modal elements
      const addLeadBtn = document.getElementById('addLead');
      const modal = document.getElementById('addLeadModal');
      const modalContent = document.getElementById('modal-content');
      const closeModal = document.getElementById('closeModal');
      const cancelLead = document.getElementById('cancelLead');
      const form = document.getElementById('addLeadForm');

      // Show modal with smooth animation
      function showModal() {
        if (modal && modalContent) {
          modal.style.opacity = '1';
          modal.style.visibility = 'visible';
          setTimeout(() => {
            modalContent.style.transform = 'scale(1)';
          }, 10);

          // Focus management for accessibility
          const firstInput = modal.querySelector('input');
          if (firstInput) firstInput.focus();

          // Prevent background scrolling
          document.body.style.overflow = 'hidden';
        }
      }

      // Hide modal with smooth animation
      function hideModal() {
        if (modal && modalContent) {
          modalContent.style.transform = 'scale(0.95)';
          setTimeout(() => {
            modal.style.opacity = '0';
            modal.style.visibility = 'hidden';

            // Reset form
            if (form) form.reset();

            // Restore background scrolling
            document.body.style.overflow = '';
          }, 200);
        }
      }

      // Event listeners
      addLeadBtn?.addEventListener('click', showModal);
      closeModal?.addEventListener('click', hideModal);
      cancelLead?.addEventListener('click', hideModal);

      // Close modal on outside click
      modal?.addEventListener('click', e => {
        if (e.target === modal) {
          hideModal();
        }
      });

      // Escape key to close modal
      document.addEventListener('keydown', e => {
        if (e.key === 'Escape' && modal?.style.visibility === 'visible') {
          hideModal();
        }
      });

      // Enhanced form submission
      form?.addEventListener('submit', e => {
        e.preventDefault();

        // Show loading state
        const submitBtn = form.querySelector('button[type="submit"]');
        const originalContent = submitBtn?.innerHTML;

        if (submitBtn) {
          submitBtn.innerHTML = `
            <svg class="w-5 h-5 animate-spin" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
            </svg>
            <span>Adding Lead...</span>
          `;
          submitBtn.disabled = true;
        }

        // Get form data
        const formData = new FormData(form);
        const leadData = Object.fromEntries(formData.entries());

        // Simulate API call
        setTimeout(() => {
          console.log('New lead data:', leadData);

          // Show success message
          const successMsg = document.createElement('div');
          successMsg.className =
            'fixed top-4 right-4 bg-green-500 text-white px-6 py-3 rounded-lg shadow-lg z-[60] transform translate-x-full transition-transform duration-300';
          successMsg.innerHTML = `
            <div class="flex items-center space-x-2">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              <span>Lead added successfully!</span>
            </div>
          `;
          document.body.appendChild(successMsg);

          // Animate success message
          setTimeout(() => (successMsg.style.transform = 'translateX(0)'), 100);
          setTimeout(() => {
            successMsg.style.transform = 'translateX(full)';
            setTimeout(() => successMsg.remove(), 300);
          }, 3000);

          // Reset button and close modal
          if (submitBtn && originalContent) {
            submitBtn.innerHTML = originalContent;
            submitBtn.disabled = false;
          }

          hideModal();
        }, 1500); // Simulate network delay
      });

      // Filter functionality
      const searchInput = document.getElementById('searchLeads');
      const statusFilter = document.getElementById('statusFilter');
      const priorityFilter = document.getElementById('priorityFilter');
      const dateFilter = document.getElementById('dateFilter');
      const clearFiltersBtn = document.getElementById('clearFilters');

      // Clear filters
      clearFiltersBtn?.addEventListener('click', () => {
        if (searchInput) searchInput.value = '';
        if (statusFilter) statusFilter.value = '';
        if (priorityFilter) priorityFilter.value = '';
        if (dateFilter) dateFilter.value = '';
      });

      // Export functionality
      document.getElementById('exportLeads')?.addEventListener('click', () => {
        alert('Export functionality would be implemented here');
      });
    });
  </script>
</BaseLayout>
