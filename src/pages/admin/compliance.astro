---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

// Get data for dashboard
const residents = await getCollection('residents').catch(() => []);
const drugTests = await getCollection('drugTests').catch(() => []);

// Calculate stats
const totalResidents = residents.length;
const recentTests = drugTests.slice(-10);
const passRate = drugTests.length > 0 ? (drugTests.filter(test => test.data.result === 'pass').length / drugTests.length * 100).toFixed(1) : '100';
---

<BaseLayout title="Compliance & Drug Testing | NewBridge Living CRM">
  <!-- Professional CRM Header -->
  <section class="bg-gradient-to-r from-emerald-900 to-emerald-800 py-8">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-3xl font-bold text-white">Compliance & Drug Testing</h1>
          <p class="text-emerald-200 mt-2">Track drug tests, medications, and compliance violations</p>
        </div>
        <div class="flex items-center space-x-4">
          <button 
            id="generateComplianceReport"
            class="bg-emerald-600 hover:bg-emerald-700 text-white px-6 py-3 rounded-lg font-semibold transition-all duration-300 flex items-center"
          >
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 17v-2m3 2v-4m3 4v-6m2 10H7a4 4 0 01-4-4V5a3 3 0 013-3h4l2 2h6a2 2 0 012 2v11a1 1 0 01-1 1z"></path>
            </svg>
            Compliance Report
          </button>
          <button 
            id="scheduleTest"
            class="bg-white text-emerald-800 px-6 py-3 rounded-lg font-semibold hover:bg-emerald-50 transition-all duration-300 flex items-center"
          >
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
            </svg>
            Schedule Test
          </button>
        </div>
      </div>
    </div>
  </section>

  <!-- Compliance Dashboard Stats -->
  <section class="bg-white py-8 border-b">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
        <!-- Pass Rate -->
        <div class="bg-gradient-to-br from-green-50 to-green-100 rounded-2xl p-6 border border-green-200/50">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-green-600 font-semibold text-sm uppercase tracking-wide">Overall Pass Rate</p>
              <p class="text-3xl font-bold text-green-700" id="passRate">{passRate}%</p>
              <p class="text-green-600 text-sm">Last 30 days</p>
            </div>
            <div class="bg-green-500 rounded-full p-3">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
          </div>
        </div>

        <!-- Tests Today -->
        <div class="bg-gradient-to-br from-blue-50 to-blue-100 rounded-2xl p-6 border border-blue-200/50">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-blue-600 font-semibold text-sm uppercase tracking-wide">Tests Today</p>
              <p class="text-3xl font-bold text-blue-700" id="testsToday">7</p>
              <p class="text-blue-600 text-sm">5 pending results</p>
            </div>
            <div class="bg-blue-500 rounded-full p-3">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"></path>
              </svg>
            </div>
          </div>
        </div>

        <!-- Violations -->
        <div class="bg-gradient-to-br from-red-50 to-red-100 rounded-2xl p-6 border border-red-200/50">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-red-600 font-semibold text-sm uppercase tracking-wide">Active Violations</p>
              <p class="text-3xl font-bold text-red-700" id="violations">3</p>
              <p class="text-red-600 text-sm">Needs attention</p>
            </div>
            <div class="bg-red-500 rounded-full p-3">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.732-.833-2.464 0L4.35 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
              </svg>
            </div>
          </div>
        </div>

        <!-- Compliance Score -->
        <div class="bg-gradient-to-br from-purple-50 to-purple-100 rounded-2xl p-6 border border-purple-200/50">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-purple-600 font-semibold text-sm uppercase tracking-wide">Compliance Score</p>
              <p class="text-3xl font-bold text-purple-700" id="complianceScore">94.2</p>
              <p class="text-purple-600 text-sm">Facility average</p>
            </div>
            <div class="bg-purple-500 rounded-full p-3">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
              </svg>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Main Content Area -->
  <section class="bg-gray-50 py-8">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        
        <!-- Recent Test Results -->
        <div class="lg:col-span-2">
          <div class="bg-white rounded-2xl shadow-sm border border-gray-200">
            <div class="px-6 py-4 border-b border-gray-200">
              <div class="flex items-center justify-between">
                <h3 class="text-lg font-bold text-gray-900">Recent Test Results</h3>
                <button class="text-emerald-600 hover:text-emerald-700 font-semibold text-sm">View All</button>
              </div>
            </div>
            
            <div class="p-6">
              <!-- Test Results Table -->
              <div class="overflow-x-auto">
                <table class="w-full">
                  <thead>
                    <tr class="text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">
                      <th class="pb-3">Resident</th>
                      <th class="pb-3">Test Type</th>
                      <th class="pb-3">Date</th>
                      <th class="pb-3">Result</th>
                      <th class="pb-3">Actions</th>
                    </tr>
                  </thead>
                  <tbody class="divide-y divide-gray-200">
                    <tr class="hover:bg-gray-50">
                      <td class="py-4">
                        <div class="flex items-center">
                          <div class="bg-emerald-600 rounded-full w-8 h-8 flex items-center justify-center text-white font-bold text-sm mr-3">
                            JD
                          </div>
                          <div>
                            <p class="font-semibold text-gray-900">John D.</p>
                            <p class="text-sm text-gray-500">Room 102</p>
                          </div>
                        </div>
                      </td>
                      <td class="py-4 text-gray-900">Urinalysis</td>
                      <td class="py-4 text-gray-500">Aug 19, 2025</td>
                      <td class="py-4">
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                          Pass
                        </span>
                      </td>
                      <td class="py-4">
                        <button class="text-emerald-600 hover:text-emerald-700 text-sm font-medium">View Details</button>
                      </td>
                    </tr>
                    
                    <tr class="hover:bg-gray-50">
                      <td class="py-4">
                        <div class="flex items-center">
                          <div class="bg-blue-600 rounded-full w-8 h-8 flex items-center justify-center text-white font-bold text-sm mr-3">
                            MS
                          </div>
                          <div>
                            <p class="font-semibold text-gray-900">Mike S.</p>
                            <p class="text-sm text-gray-500">Room 205</p>
                          </div>
                        </div>
                      </td>
                      <td class="py-4 text-gray-900">Breathalyzer</td>
                      <td class="py-4 text-gray-500">Aug 19, 2025</td>
                      <td class="py-4">
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                          Pending
                        </span>
                      </td>
                      <td class="py-4">
                        <button class="text-emerald-600 hover:text-emerald-700 text-sm font-medium">View Details</button>
                      </td>
                    </tr>
                    
                    <tr class="hover:bg-gray-50">
                      <td class="py-4">
                        <div class="flex items-center">
                          <div class="bg-purple-600 rounded-full w-8 h-8 flex items-center justify-center text-white font-bold text-sm mr-3">
                            RT
                          </div>
                          <div>
                            <p class="font-semibold text-gray-900">Robert T.</p>
                            <p class="text-sm text-gray-500">Room 103</p>
                          </div>
                        </div>
                      </td>
                      <td class="py-4 text-gray-900">Urinalysis</td>
                      <td class="py-4 text-gray-500">Aug 18, 2025</td>
                      <td class="py-4">
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                          Failed
                        </span>
                      </td>
                      <td class="py-4">
                        <button class="text-emerald-600 hover:text-emerald-700 text-sm font-medium">View Details</button>
                      </td>
                    </tr>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>

        <!-- Sidebar Widgets -->
        <div class="space-y-6">
          
          <!-- Quick Actions -->
          <div class="bg-white rounded-2xl shadow-sm border border-gray-200 p-6">
            <h3 class="text-lg font-bold text-gray-900 mb-4">Quick Actions</h3>
            <div class="space-y-3">
              <button class="w-full bg-emerald-600 hover:bg-emerald-700 text-white px-4 py-3 rounded-lg font-semibold transition-all duration-300 flex items-center justify-center">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                </svg>
                Log Test Result
              </button>
              
              <button class="w-full bg-blue-600 hover:bg-blue-700 text-white px-4 py-3 rounded-lg font-semibold transition-all duration-300 flex items-center justify-center">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
                Schedule Random Test
              </button>
              
              <button class="w-full bg-purple-600 hover:bg-purple-700 text-white px-4 py-3 rounded-lg font-semibold transition-all duration-300 flex items-center justify-center">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
              </svg>
                Medication Log
              </button>
            </div>
          </div>

          <!-- Test Schedule -->
          <div class="bg-white rounded-2xl shadow-sm border border-gray-200 p-6">
            <h3 class="text-lg font-bold text-gray-900 mb-4">Today's Test Schedule</h3>
            <div class="space-y-4">
              <div class="flex items-center justify-between p-3 bg-blue-50 rounded-lg">
                <div>
                  <p class="font-semibold text-blue-900">Alex M.</p>
                  <p class="text-sm text-blue-600">Random UA - 2:00 PM</p>
                </div>
                <span class="text-blue-600 text-xs font-medium">Scheduled</span>
              </div>
              
              <div class="flex items-center justify-between p-3 bg-yellow-50 rounded-lg">
                <div>
                  <p class="font-semibold text-yellow-900">Chris B.</p>
                  <p class="text-sm text-yellow-600">Breathalyzer - 6:00 PM</p>
                </div>
                <span class="text-yellow-600 text-xs font-medium">Pending</span>
              </div>
              
              <div class="flex items-center justify-between p-3 bg-green-50 rounded-lg">
                <div>
                  <p class="font-semibold text-green-900">David L.</p>
                  <p class="text-sm text-green-600">Weekly UA - 9:00 AM</p>
                </div>
                <span class="text-green-600 text-xs font-medium">Completed</span>
              </div>
            </div>
          </div>

          <!-- Compliance Alerts -->
          <div class="bg-white rounded-2xl shadow-sm border border-gray-200 p-6">
            <h3 class="text-lg font-bold text-gray-900 mb-4">Compliance Alerts</h3>
            <div class="space-y-3">
              <div class="flex items-start p-3 bg-red-50 rounded-lg">
                <svg class="w-5 h-5 text-red-500 mr-2 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.732-.833-2.464 0L4.35 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
                </svg>
                <div>
                  <p class="font-semibold text-red-900 text-sm">Failed Test Follow-up</p>
                  <p class="text-red-700 text-xs">Robert T. - requires immediate review</p>
                </div>
              </div>
              
              <div class="flex items-start p-3 bg-yellow-50 rounded-lg">
                <svg class="w-5 h-5 text-yellow-500 mr-2 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <div>
                  <p class="font-semibold text-yellow-900 text-sm">Overdue Test</p>
                  <p class="text-yellow-700 text-xs">Tyler R. - missed scheduled UA</p>
                </div>
              </div>
            </div>
          </div>

        </div>
      </div>
    </div>
  </section>

  <!-- Test Result Modal (Hidden by default) -->
  <div id="testModal" class="fixed inset-0 bg-black bg-opacity-50 hidden z-50 flex items-center justify-center p-4">
    <div class="bg-white rounded-2xl max-w-2xl w-full max-h-screen overflow-y-auto">
      <div class="p-6 border-b border-gray-200">
        <div class="flex items-center justify-between">
          <h3 class="text-xl font-bold text-gray-900">Log Test Result</h3>
          <button id="closeModal" class="text-gray-400 hover:text-gray-600">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
          </button>
        </div>
      </div>
      
      <div class="p-6">
        <form id="testForm" class="space-y-6">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
              <label class="block text-sm font-semibold text-gray-900 mb-2">Resident</label>
              <select class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500">
                <option>Select resident...</option>
                <option>John D. - Room 102</option>
                <option>Mike S. - Room 205</option>
                <option>Robert T. - Room 103</option>
              </select>
            </div>
            
            <div>
              <label class="block text-sm font-semibold text-gray-900 mb-2">Test Type</label>
              <select class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500">
                <option>Urinalysis</option>
                <option>Breathalyzer</option>
                <option>Blood Test</option>
                <option>Saliva Test</option>
              </select>
            </div>
            
            <div>
              <label class="block text-sm font-semibold text-gray-900 mb-2">Test Date</label>
              <input type="date" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500" value="2025-08-19">
            </div>
            
            <div>
              <label class="block text-sm font-semibold text-gray-900 mb-2">Result</label>
              <select class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500">
                <option>Pass</option>
                <option>Fail</option>
                <option>Dilute</option>
                <option>Invalid</option>
                <option>Pending</option>
              </select>
            </div>
          </div>
          
          <div>
            <label class="block text-sm font-semibold text-gray-900 mb-2">Notes</label>
            <textarea rows="3" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500" placeholder="Add any relevant notes..."></textarea>
          </div>
          
          <div class="flex items-center">
            <input type="checkbox" id="randomTest" class="w-4 h-4 text-emerald-600 bg-gray-100 border-gray-300 rounded focus:ring-emerald-500">
            <label for="randomTest" class="ml-2 text-sm text-gray-900">Random test</label>
          </div>
          
          <div class="flex justify-end space-x-4">
            <button type="button" id="cancelTest" class="px-6 py-3 border border-gray-300 rounded-lg text-gray-700 font-semibold hover:bg-gray-50 transition-colors duration-300">
              Cancel
            </button>
            <button type="submit" class="px-6 py-3 bg-emerald-600 text-white rounded-lg font-semibold hover:bg-emerald-700 transition-colors duration-300">
              Save Test Result
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <!-- JavaScript for Interactive Features -->
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      // Modal controls
      const scheduleTestBtn = document.getElementById('scheduleTest');
      const testModal = document.getElementById('testModal');
      const closeModal = document.getElementById('closeModal');
      const cancelTest = document.getElementById('cancelTest');
      
      // Quick action buttons
      const logTestBtn = document.querySelector('button:contains("Log Test Result")') || scheduleTestBtn;
      
      // Open modal
      function openModal() {
        testModal.classList.remove('hidden');
        document.body.style.overflow = 'hidden';
      }
      
      // Close modal
      function closeTestModal() {
        testModal.classList.add('hidden');
        document.body.style.overflow = 'auto';
      }
      
      // Event listeners
      scheduleTestBtn?.addEventListener('click', openModal);
      logTestBtn?.addEventListener('click', openModal);
      closeModal?.addEventListener('click', closeTestModal);
      cancelTest?.addEventListener('click', closeTestModal);
      
      // Close on outside click
      testModal?.addEventListener('click', function(e) {
        if (e.target === testModal) {
          closeTestModal();
        }
      });
      
      // Form submission
      document.getElementById('testForm')?.addEventListener('submit', function(e) {
        e.preventDefault();
        
        // Here you would typically send data to your backend
        alert('Test result saved successfully!');
        closeTestModal();
        
        // Refresh data or update UI
        location.reload();
      });
      
      // Generate report functionality
      document.getElementById('generateComplianceReport')?.addEventListener('click', function() {
        alert('Generating compliance report... This would typically generate a PDF report for courts/probation officers.');
      });
      
      console.log('✅ Compliance & Drug Testing Module loaded successfully');
    });
  </script>
</BaseLayout>