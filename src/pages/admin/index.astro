---
// src/pages/admin/index.astro - Secure Admin Dashboard
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

// Get actual data from CMS
const facilities = await getCollection('facilities').catch(() => []);
const residents = await getCollection('residents').catch(() => []);
const staff = await getCollection('staff').catch(() => []);
const leads = await getCollection('leads').catch(() => []);

// Calculate real stats
const totalFacilities = facilities.length;
const totalResidents = residents.length;
const activeStaff = staff.length;
const newLeads = leads.filter(lead => lead.data.status === 'new').length;
const occupancyRate = Math.round((totalResidents / (facilities.reduce((acc, f) => acc + f.data.capacity, 0) || 1)) * 100);

// Get current date for professional display
const currentDate = new Date().toLocaleDateString('en-US', { 
  weekday: 'long', 
  year: 'numeric', 
  month: 'long', 
  day: 'numeric' 
});
---

<BaseLayout title="CRM Dashboard | NewBridge Living">
  <!-- Import Authentication Guard -->
  <div id="admin-auth-required">
    <!-- This will be replaced by the auth component -->
    <div class="fixed inset-0 bg-emerald-900 z-50 flex items-center justify-center">
      <div class="text-center">
        <div class="animate-spin rounded-full h-12 w-12 border-b-2 border-white mx-auto mb-4"></div>
        <h2 class="text-xl font-semibold text-white mb-2">🔒 Verifying Access</h2>
        <p class="text-emerald-200">Checking credentials for NewBridge Living CRM...</p>
      </div>
    </div>
  </div>

  <!-- Professional CRM Header -->
  <section class="bg-gradient-to-r from-emerald-900 to-emerald-800 py-8">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-3xl font-bold text-white">NewBridge Living CRM</h1>
          <p class="text-emerald-200 mt-2">{currentDate}</p>
        </div>
