  <!-- JavaScript for Dashboard Interactivity -->
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      // Auto-refresh dashboard stats every 5 minutes
      setInterval(() => {
        console.log('Refreshing dashboard data...');
        // In production, this would fetch updated stats from your API
      }, 300000); // 5 minutes
      
      // Quick action handlers
      const quickActions = document.querySelectorAll('[class*="bg-emerald-600"], [class*="bg-blue-600"], [class*="bg-purple-600"], [class*="bg-yellow-600"]');
      
      quickActions.forEach(button => {
        button.addEventListener('click', function() {
          const buttonText = this.textContent.trim();
          
          // Route to appropriate module based on button text
          if (buttonText.includes('Lead')) {
            window.location.href = '/admin/leads';
          } else if (buttonText.includes('Drug Test')) {
            window.location.href = '/admin/compliance';
          } else if (buttonText.includes('Case Note')) {
            window.location.href = '/admin/case-notes';
          } else if (buttonText.includes('Payment')) {
            window.location.href = '/admin/financial';
          }
        });
      });
      
      console.log('‚úÖ NewBridge Living CRM Dashboard loaded successfully');
    });
  </script>
