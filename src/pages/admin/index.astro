---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

// Get all data for dashboard overview
const leads = await getCollection('leads').catch(() => []);
const residents = await getCollection('residents').catch(() => []);
const facilities = await getCollection('facilities').catch(() => []);
const staff = await getCollection('staff').catch(() => []);

// Calculate key metrics
const newLeads = leads.filter(lead => lead.data.status === 'new').length;
const activeResidents = residents.filter(resident => resident.data.status === 'active').length;
const totalFacilities = facilities.length;
const activeStaff = staff.filter(member => member.data.status === 'active').length;

// Calculate occupancy rate
const totalCapacity = facilities.reduce((sum, facility) => sum + (facility.data.capacity || 0), 0);
const occupancyRate = totalCapacity > 0 ? Math.round((activeResidents / totalCapacity) * 100) : 0;

// Recent activity (mock data for demo)
const recentActivity = [
  { type: 'lead', message: 'New admission inquiry from Sarah M.', time: '2 hours ago' },
  { type: 'resident', message: 'John D. completed Phase 2 requirements', time: '4 hours ago' },
  { type: 'test', message: 'Drug test scheduled for Mike S.', time: '6 hours ago' },
  { type: 'payment', message: 'Payment received from Robert T.', time: '1 day ago' },
  { type: 'staff', message: 'Emily R. added case note for Alex M.', time: '1 day ago' }
];
