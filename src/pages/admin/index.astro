---
// src/pages/admin/index.astro - Fixed version
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

// Get CRM data (would come from real database in production)
const residents = await getCollection('residents').catch(() => []);
const leads = await getCollection('leads').catch(() => []);
const staff = await getCollection('staff').catch(() => []);
const facilities = await getCollection('facilities').catch(() => []);

// Calculate key metrics for dashboard
const totalResidents = residents.length;
const totalBeds = facilities.reduce((sum, facility) => sum + (facility.data?.capacity || 0), 0);
const occupancyRate = totalBeds > 0 ? Math.round((totalResidents / totalBeds) * 100) : 0;

// Fixed: Use lowercase status values to match schema
const newLeads = leads.filter(lead => lead.data?.status === 'new').length;
const activeStaff = staff.filter(member => member.data?.active === true).length;

// Revenue calculation (mock data for now)
const monthlyRevenue = residents.reduce((sum, resident) => sum + (resident.data?.monthlyRent || 0), 0);
