  { id: 1, title: "30 Days Clean", date: "2024-10-01", icon: "üéâ" },
  { id: 2, title: "Perfect Attendance", date: "2024-10-15", icon: "‚≠ê" },
  { id: 3, title: "Chore Champion", date: "2024-11-01", icon: "üèÜ" },
