const chores = [
  { id: 1, task: "Kitchen Cleanup", assigned: "Mon, Wed, Fri", status: "completed", nextDue: "2024-11-25", points: 5 },
  { id: 2, task: "Bathroom Maintenance", assigned: "Saturday", status: "pending", nextDue: "2024-11-23", points: 3 },
