---

<BaseLayout title="Resident Portal | NewBridge Living">
  <!-- Portal Header -->
  <section class="bg-gradient-to-br from-emerald-900 via-teal-900 to-blue-900 py-16 relative overflow-hidden">
    <!-- Background Pattern -->
    <div class="absolute inset-0 bg-gradient-to-r from-emerald-600/10 to-blue-600/10"></div>
    <div class="absolute inset-0 bg-dot-pattern"></div>
    
    <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-8">
        <!-- Welcome Message -->
        <div>
          <div class="inline-flex items-center gap-2 bg-white/10 backdrop-blur-sm border border-white/20 rounded-full px-4 py-2 text-white/90 text-sm font-medium mb-4">
            <div class="w-2 h-2 bg-green-400 rounded-full animate-pulse"></div>
            Welcome Back
          </div>
          
          <h1 class="text-4xl md:text-5xl font-bold text-white mb-4">
            Hello, <span class="text-emerald-400">{currentResident.fullName.split(' ')[0]}</span>
          </h1>
          
          <p class="text-xl text-white/80 max-w-2xl">
            {currentResident.facility} ‚Ä¢ Room {currentResident.roomNumber} ‚Ä¢ {currentResident.programPhase}
          </p>
        </div>
        
        <!-- Sobriety Counter -->
        <div class="bg-white/10 backdrop-blur-sm border border-white/20 rounded-3xl p-8 text-center min-w-[250px]">
          <div class="text-5xl font-bold text-white mb-2">
            {currentResident.daysClean}
          </div>
          <div class="text-emerald-400 font-semibold text-lg mb-1">Days Clean</div>
          <div class="text-white/60 text-sm">
            Since {new Date(currentResident.sobrietyDate).toLocaleDateString()}
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Quick Actions -->
  <section class="bg-white border-b border-gray-100 py-8">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-lg font-semibold text-gray-900 mb-6">Quick Actions</h2>
      
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
        {quickActions.map((action) => (
          <a href={action.href} class={`group relative ${action.bgClass} rounded-2xl p-6 border ${action.borderClass} hover:shadow-lg ${action.shadowClass} transition-all duration-300 hover:-translate-y-1 text-center`}>
            <div class={`absolute inset-0 ${action.bgClass.replace('50', '500/5').replace('100', '600/5')} rounded-2xl opacity-0 group-hover:opacity-100 transition-opacity duration-300`}></div>
            <div class="relative z-10">
              <div class={`w-16 h-16 ${action.iconClass} rounded-2xl flex items-center justify-center mb-4 mx-auto group-hover:scale-110 transition-transform duration-300`}>
                {action.icon === 'credit-card' && (
                  <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"></path>
                  </svg>
                )}
                {action.icon === 'mail' && (
                  <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26c.67.36 1.45.36 2.12 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                  </svg>
                )}
                {action.icon === 'calendar' && (
                  <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                  </svg>
                )}
                {action.icon === 'check' && (
                  <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                )}
              </div>
              <div class="font-semibold text-gray-900">{action.name}</div>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Main Dashboard -->
  <section class="py-12 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      
      <!-- Progress Overview -->
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 mb-12">
        <!-- Progress Card -->
        <div class="lg:col-span-2 bg-white rounded-3xl p-8 border border-gray-100 shadow-sm">
          <div class="flex items-center justify-between mb-6">
            <h3 class="text-xl font-bold text-gray-900">Recovery Progress</h3>
            <span class="text-sm text-emerald-600 font-medium">{currentResident.progressPercentage}% Complete</span>
          </div>
          
          <!-- Progress Bar -->
          <div class="mb-8">
            <div class="bg-gray-200 rounded-full h-4 overflow-hidden">
              <div 
                class="bg-gradient-to-r from-emerald-500 to-teal-500 h-full rounded-full transition-all duration-1000"
                style={`width: ${currentResident.progressPercentage}%`}
              ></div>
            </div>
            <div class="flex justify-between text-sm text-gray-600 mt-2">
              <span>Goals Completed: {currentResident.completedGoals}/{currentResident.totalGoals}</span>
              <span>{currentResident.progressPercentage}%</span>
            </div>
          </div>
          
          <!-- Achievements Grid -->
          <div>
            <h4 class="font-semibold text-gray-900 mb-4">Recent Achievements</h4>
            <div class="grid grid-cols-2 gap-4">
              {achievements.map((achievement) => (
                <div class="flex items-center gap-3 p-4 bg-gradient-to-br from-emerald-50 to-teal-50 rounded-2xl border border-emerald-100">
                  <div class="text-2xl">{achievement.icon}</div>
                  <div>
                    <div class="font-medium text-gray-900 text-sm">{achievement.title}</div>
                    <div class="text-gray-600 text-xs">{new Date(achievement.date).toLocaleDateString()}</div>
                  </div>
                </div>
              ))}
            </div>
          </div>
        </div>
        
        <!-- Account Summary -->
        <div class="bg-white rounded-3xl p-8 border border-gray-100 shadow-sm">
          <h3 class="text-xl font-bold text-gray-900 mb-6">Account Summary</h3>
          
          <div class="space-y-6">
            <!-- Balance -->
            <div class="text-center p-6 bg-gradient-to-br from-emerald-50 to-teal-50 rounded-2xl border border-emerald-100">
              <div class="text-3xl font-bold text-emerald-600 mb-1">
                ${Math.abs(currentResident.currentBalance).toLocaleString()}
              </div>
              <div class="text-sm text-emerald-700 font-medium">
                {currentResident.currentBalance >= 0 ? 'Credit Balance' : 'Current Balance'}
              </div>
            </div>
            
            <!-- Payment Info -->
            <div class="space-y-3">
              <div class="flex justify-between text-sm">
                <span class="text-gray-600">Monthly Rent:</span>
                <span class="font-medium text-gray-900">${currentResident.monthlyRent}</span>
              </div>
              <div class="flex justify-between text-sm">
                <span class="text-gray-600">Next Payment Due:</span>
                <span class="font-medium text-gray-900">{new Date(currentResident.nextPaymentDue).toLocaleDateString()}</span>
              </div>
              <div class="flex justify-between text-sm">
                <span class="text-gray-600">Move-in Date:</span>
                <span class="font-medium text-gray-900">{new Date(currentResident.moveInDate).toLocaleDateString()}</span>
              </div>
            </div>
            
            <!-- Payment Button -->
            <a href="/portal/payments" class="w-full btn-primary text-center block">
              Make Payment
            </a>
          </div>
        </div>
      </div>

      <!-- Content Grid -->
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-12">
        <!-- Upcoming Events -->
        <div class="bg-white rounded-3xl p-8 border border-gray-100 shadow-sm">
          <div class="flex items-center justify-between mb-6">
            <h3 class="text-xl font-bold text-gray-900">Upcoming Events</h3>
            <a href="/portal/schedule" class="text-sm text-emerald-600 hover:text-emerald-700 font-medium">
              View All ‚Üí
            </a>
          </div>
          
          <div class="space-y-4">
            {upcomingEvents.map((event) => (
              <div class="flex items-start gap-4 p-4 bg-gray-50 rounded-2xl hover:bg-gray-100 transition-colors duration-200">
                <div class={`w-12 h-12 rounded-xl flex items-center justify-center flex-shrink-0 ${
                  event.type === 'therapy' ? 'bg-emerald-100' :
                  event.type === 'workshop' ? 'bg-blue-100' :
                  event.type === 'meeting' ? 'bg-purple-100' :
                  'bg-red-100'
                }`}>
                  {event.type === 'therapy' && (
                    <svg class="w-6 h-6 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                    </svg>
                  )}
                  {event.type === 'workshop' && (
                    <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                    </svg>
                  )}
                  {event.type === 'meeting' && (
                    <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
                    </svg>
                  )}
                  {event.type === 'test' && (
                    <svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"></path>
                    </svg>
                  )}
                </div>
                <div class="flex-1">
                  <div class="font-semibold text-gray-900 mb-1">{event.event}</div>
                  <div class="text-sm text-gray-600 mb-1">{event.location}</div>
                  <div class="text-xs text-gray-500">
                    {new Date(event.date).toLocaleDateString()} at {event.time}
                  </div>
                </div>
              </div>
            ))}
          </div>
        </div>

        <!-- Chore Tracker -->
        <div class="bg-white rounded-3xl p-8 border border-gray-100 shadow-sm">
          <div class="flex items-center justify-between mb-6">
            <h3 class="text-xl font-bold text-gray-900">Chore Tracker</h3>
            <a href="/portal/chores" class="text-sm text-emerald-600 hover:text-emerald-700 font-medium">
              View All ‚Üí
            </a>
          </div>
          
          <div class="space-y-4">
            {chores.map((chore) => (
              <div class="flex items-center justify-between p-4 bg-gray-50 rounded-2xl">
                <div class="flex items-center gap-4">
                  <div class={`w-10 h-10 rounded-full flex items-center justify-center ${
                    chore.status === 'completed' ? 'bg-emerald-100' : 'bg-yellow-100'
                  }`}>
                    {chore.status === 'completed' ? (
                      <svg class="w-5 h-5 text-emerald-600" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                      </svg>
                    ) : (
                      <svg class="w-5 h-5 text-yellow-600" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"></path>
                      </svg>
                    )}
                  </div>
                  <div>
                    <div class="font-medium text-gray-900">{chore.task}</div>
                    <div class="text-sm text-gray-600">{chore.assigned}</div>
                    <div class="text-xs text-gray-500">Due: {new Date(chore.nextDue).toLocaleDateString()}</div>
                  </div>
                </div>
                <div class="text-right">
                  <div class={`text-xs font-medium px-2 py-1 rounded-full ${
                    chore.status === 'completed' ? 'bg-emerald-100 text-emerald-700' : 'bg-yellow-100 text-yellow-700'
                  }`}>
                    {chore.status}
                  </div>
                  <div class="text-xs text-gray-500 mt-1">{chore.points} pts</div>
                </div>
              </div>
            ))}
          </div>
        </div>
      </div>

      <!-- Recent Tests -->
      <div class="bg-white rounded-3xl p-8 border border-gray-100 shadow-sm">
        <div class="flex items-center justify-between mb-6">
          <h3 class="text-xl font-bold text-gray-900">Recent Test Results</h3>
          <a href="/portal/tests" class="text-sm text-emerald-600 hover:text-emerald-700 font-medium">
            View History ‚Üí
          </a>
        </div>
        
        <div class="overflow-x-auto">
          <table class="w-full">
            <thead>
              <tr class="border-b border-gray-100">
                <th class="text-left py-3 px-4 font-semibold text-gray-900">Date</th>
                <th class="text-left py-3 px-4 font-semibold text-gray-900">Test Type</th>
                <th class="text-left py-3 px-4 font-semibold text-gray-900">Result</th>
                <th class="text-left py-3 px-4 font-semibold text-gray-900">Administered By</th>
              </tr>
            </thead>
            <tbody>
              {recentTests.map((test) => (
                <tr class="border-b border-gray-50 hover:bg-gray-50 transition-colors duration-200">
                  <td class="py-4 px-4 text-gray-900">{new Date(test.date).toLocaleDateString()}</td>
                  <td class="py-4 px-4 text-gray-900">{test.type}</td>
                  <td class="py-4 px-4">
                    <span class={`inline-flex items-center px-3 py-1 rounded-full text-xs font-medium ${
                      test.result === 'Pass' ? 'bg-emerald-100 text-emerald-700' : 'bg-red-100 text-red-700'
                    }`}>
                      {test.result}
                    </span>
                  </td>
                  <td class="py-4 px-4 text-gray-600">{test.administeredBy}</td>
                </tr>
              ))}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </section>

  <!-- Emergency Contact Section -->
  <section class="bg-gradient-to-br from-red-900 to-red-800 py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h3 class="text-2xl font-bold text-white mb-4">Need Help?</h3>
      <p class="text-red-200 mb-8 max-w-2xl mx-auto">
        If you're experiencing a crisis or emergency, don't hesitate to reach out for immediate support.
      </p>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 max-w-4xl mx-auto">
        <a href="tel:988" class="bg-white/10 backdrop-blur-sm border border-white/20 rounded-2xl p-6 text-white hover:bg-white/20 transition-all duration-300">
          <div class="text-3xl font-bold mb-2">988</div>
          <div class="font-medium">Crisis Lifeline</div>
        </a>
        
        <a href="tel:+1-850-555-0123" class="bg-white/10 backdrop-blur-sm border border-white/20 rounded-2xl p-6 text-white hover:bg-white/20 transition-all duration-300">
          <div class="text-lg font-bold mb-2">(850) 555-0123</div>
          <div class="font-medium">NewBridge Living</div>
        </a>
        
        <a href="tel:911" class="bg-white/10 backdrop-blur-sm border border-white/20 rounded-2xl p-6 text-white hover:bg-white/20 transition-all duration-300">
          <div class="text-3xl font-bold mb-2">911</div>
          <div class="font-medium">Emergency Services</div>
        </a>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .bg-dot-pattern {
    background-image: radial-gradient(circle, rgba(255, 255, 255, 0.05) 1px, transparent 1px);
    background-size: 20px 20px;
  }
  
  .btn-primary {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.75rem 1.5rem;
    background: linear-gradient(to right, #10B981, #14B8A6);
    color: white;
    font-weight: 600;
    border-radius: 0.75rem;
    text-decoration: none;
    transition: all 0.3s ease;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
  }
  
  .btn-primary:hover {
    background: linear-gradient(to right, #059669, #0F766E);
    transform: translateY(-1px);
    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
  }
</style>