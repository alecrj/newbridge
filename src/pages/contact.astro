<script>
  function showForm(formType: string): void {
    // Hide all forms
    const forms = document.querySelectorAll('.contact-form');
    forms.forEach(form => form.classList.add('hidden'));
    
    // Reset all selector buttons
    const selectors = document.querySelectorAll('.form-selector');
    selectors.forEach(selector => {
      selector.classList.remove('bg-emerald-600', 'text-white');
      selector.classList.add('bg-gray-200', 'text-gray-700');
    });
    
    // Show selected form
    const selectedForm = document.getElementById(formType + '-form');
    if (selectedForm) {
      selectedForm.classList.remove('hidden');
    }
    
    // Update active selector - safer event handling
    const clickedButton = document.querySelector(`button[onclick="showForm('${formType}')"]`) as HTMLButtonElement;
    if (clickedButton) {
      clickedButton.classList.remove('bg-gray-200', 'text-gray-700');
      clickedButton.classList.add('bg-emerald-600', 'text-white');
    }
  }

  // Make showForm globally available
  (window as any).showForm = showForm;

  // Initialize with admission form
  document.addEventListener('DOMContentLoaded', function() {
    showForm('admission');
    
    // Add form submission handling with proper type safety
    const forms = document.querySelectorAll('form[data-netlify="true"]') as NodeListOf<HTMLFormElement>;
    forms.forEach(form => {
      form.addEventListener('submit', function(e: SubmitEvent) {
        const submitButton = form.querySelector('button[type="submit"]') as HTMLButtonElement;
        if (!submitButton) return;
        
        const originalText = submitButton.textContent || 'Submit';
        
        submitButton.innerHTML = `
