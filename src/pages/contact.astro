---
// src/pages/contact.astro
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout 
  title="Contact NewBridge Living - 24/7 Admissions & Support"
  description="Contact NewBridge Living for immediate assistance with sober living placement. Available 24/7 for crisis support and admissions in Tallahassee, Florida."
>
  <!-- Hero Section -->
  <section class="relative py-32 bg-gradient-to-br from-[#0A2A4A] via-[#163553] to-[#0A2A4A] overflow-hidden">
    <!-- Background Pattern -->
    <div class="absolute inset-0 opacity-10">
      <svg class="w-full h-full" viewBox="0 0 100 100" fill="none">
        <defs>
          <pattern id="contact-pattern" x="0" y="0" width="20" height="20" patternUnits="userSpaceOnUse">
            <circle cx="10" cy="10" r="2" fill="currentColor" opacity="0.3"/>
            <circle cx="5" cy="5" r="1" fill="currentColor" opacity="0.2"/>
            <circle cx="15" cy="15" r="1" fill="currentColor" opacity="0.2"/>
          </pattern>
        </defs>
        <rect width="100" height="100" fill="url(#contact-pattern)" />
      </svg>
    </div>

    <div class="container relative z-10">
      <div class="text-center max-w-4xl mx-auto">
        <div class="inline-flex items-center bg-white/20 backdrop-blur-sm text-white px-6 py-3 rounded-full text-sm font-semibold mb-8 border border-white/30">
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          Available 24/7 for Crisis Support
        </div>
        
        <h1 class="text-white mb-8">Get In Touch</h1>
        
        <p class="text-xl text-white/90 leading-relaxed max-w-3xl mx-auto">
          We're here to help you or your loved one take the first step toward recovery. Our admissions team is available around the clock to provide support, answer questions, and arrange immediate placement when needed.
        </p>
      </div>
    </div>
  </section>

  <!-- Contact Options Grid -->
  <section class="section bg-white">
    <div class="container">
      <div class="grid lg:grid-cols-3 gap-8 mb-16">
        <!-- Phone Contact -->
        <div class="card text-center group hover:-translate-y-1">
          <div class="w-16 h-16 bg-[#2EB67D]/10 rounded-full flex items-center justify-center mx-auto mb-4 group-hover:bg-[#2EB67D]/20 transition-colors">
            <svg class="w-8 h-8 text-[#2EB67D]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold mb-2">Call Us 24/7</h3>
          <p class="text-gray-600 mb-4">Immediate assistance available</p>
          <a href="tel:+18505554673" class="text-2xl font-bold text-[#0A2A4A] hover:text-[#2EB67D] transition-colors">
            (850) 555-HOPE
          </a>
          <p class="text-sm text-gray-500 mt-2">Crisis support always available</p>
        </div>

        <!-- Email Contact -->
        <div class="card text-center group hover:-translate-y-1">
          <div class="w-16 h-16 bg-[#2EB67D]/10 rounded-full flex items-center justify-center mx-auto mb-4 group-hover:bg-[#2EB67D]/20 transition-colors">
            <svg class="w-8 h-8 text-[#2EB67D]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold mb-2">Email Support</h3>
          <p class="text-gray-600 mb-4">Response within 1 hour</p>
          <a href="mailto:admissions@newbridgeliving.com" class="text-lg text-[#0A2A4A] hover:text-[#2EB67D] transition-colors">
            admissions@newbridgeliving.com
          </a>
          <p class="text-sm text-gray-500 mt-2">For non-urgent inquiries</p>
        </div>

        <!-- Visit Location -->
        <div class="card text-center group hover:-translate-y-1">
          <div class="w-16 h-16 bg-[#2EB67D]/10 rounded-full flex items-center justify-center mx-auto mb-4 group-hover:bg-[#2EB67D]/20 transition-colors">
            <svg class="w-8 h-8 text-[#2EB67D]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold mb-2">Visit Us</h3>
          <p class="text-gray-600 mb-4">Tours by appointment</p>
          <address class="not-italic text-[#0A2A4A]">
            1234 Recovery Lane<br>
            Tallahassee, FL 32301
          </address>
          <p class="text-sm text-gray-500 mt-2">Mon-Fri 9AM-6PM</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact Forms Section -->
  <section class="section bg-gray-50">
    <div class="container">
      <div class="grid lg:grid-cols-2 gap-12">
        <!-- General Inquiry Form -->
        <div class="card bg-white">
          <h2 class="text-2xl font-semibold mb-6">Send Us a Message</h2>
          <p class="text-gray-600 mb-8">
            Fill out this form and we'll contact you within 1 hour during business hours, or immediately for urgent matters.
          </p>

          <form id="contact-form" class="space-y-6">
            <!-- Name Field -->
            <div>
              <label for="name" class="block text-sm font-medium text-gray-700 mb-2">
                Your Name *
              </label>
              <input
                type="text"
                id="name"
                name="name"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#2EB67D] focus:border-transparent transition-colors"
                placeholder="John Doe"
              >
            </div>

            <!-- Phone Field -->
            <div>
              <label for="phone" class="block text-sm font-medium text-gray-700 mb-2">
                Phone Number *
              </label>
              <input
                type="tel"
                id="phone"
                name="phone"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#2EB67D] focus:border-transparent transition-colors"
                placeholder="(555) 123-4567"
              >
            </div>

            <!-- Email Field -->
            <div>
              <label for="email" class="block text-sm font-medium text-gray-700 mb-2">
                Email Address
              </label>
              <input
                type="email"
                id="email"
                name="email"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#2EB67D] focus:border-transparent transition-colors"
                placeholder="john@example.com"
              >
            </div>

            <!-- Inquiry Type -->
            <div>
              <label for="inquiry-type" class="block text-sm font-medium text-gray-700 mb-2">
                Inquiry Type *
              </label>
              <select
                id="inquiry-type"
                name="inquiry-type"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#2EB67D] focus:border-transparent transition-colors"
              >
                <option value="">Select an option</option>
                <option value="admission">Admission Inquiry</option>
                <option value="family">Family Member Question</option>
                <option value="professional">Professional Referral</option>
                <option value="alumni">Alumni Services</option>
                <option value="employment">Employment Opportunity</option>
                <option value="other">Other</option>
              </select>
            </div>

            <!-- Message Field -->
            <div>
              <label for="message" class="block text-sm font-medium text-gray-700 mb-2">
                Message *
              </label>
              <textarea
                id="message"
                name="message"
                rows="4"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#2EB67D] focus:border-transparent transition-colors resize-none"
                placeholder="Tell us how we can help..."
              ></textarea>
            </div>

            <!-- Urgency Checkbox -->
            <div class="flex items-start">
              <input
                type="checkbox"
                id="urgent"
                name="urgent"
                class="mt-1 w-4 h-4 text-[#2EB67D] border-gray-300 rounded focus:ring-[#2EB67D]"
              >
              <label for="urgent" class="ml-2 text-sm text-gray-700">
                This is an urgent matter requiring immediate assistance
              </label>
            </div>

            <!-- Submit Button -->
            <button
              type="submit"
              class="w-full btn btn-accent text-lg font-semibold"
            >
              Send Message
              <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
              </svg>
            </button>
          </form>

          <!-- Success Message -->
          <div id="form-success" class="hidden mt-6 p-4 bg-green-50 border border-green-200 rounded-lg">
            <p class="text-green-800 font-medium">Message sent successfully!</p>
            <p class="text-green-600 text-sm mt-1">We'll contact you shortly.</p>
          </div>

          <!-- Error Message -->
          <div id="form-error" class="hidden mt-6 p-4 bg-red-50 border border-red-200 rounded-lg">
            <p class="text-red-800 font-medium">There was an error sending your message.</p>
            <p class="text-red-600 text-sm mt-1">Please call us directly at (850) 555-HOPE.</p>
          </div>
        </div>

        <!-- Professional Referral Form -->
        <div class="card bg-white">
          <h2 class="text-2xl font-semibold mb-6">Professional Referral</h2>
          <p class="text-gray-600 mb-8">
            For healthcare providers, therapists, case managers, and other professionals making a referral.
          </p>

          <form id="referral-form" class="space-y-6">
            <!-- Professional Info -->
            <div class="border-b border-gray-200 pb-6">
              <h3 class="font-semibold text-lg mb-4">Your Information</h3>
              
              <div class="space-y-4">
                <div>
                  <label for="prof-name" class="block text-sm font-medium text-gray-700 mb-2">
                    Your Name *
                  </label>
                  <input
                    type="text"
                    id="prof-name"
                    name="prof-name"
                    required
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#2EB67D] focus:border-transparent transition-colors"
                  >
                </div>

                <div>
                  <label for="prof-title" class="block text-sm font-medium text-gray-700 mb-2">
                    Title/Role *
                  </label>
                  <input
                    type="text"
                    id="prof-title"
                    name="prof-title"
                    required
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#2EB67D] focus:border-transparent transition-colors"
                    placeholder="e.g., Case Manager, Therapist"
                  >
                </div>

                <div>
                  <label for="organization" class="block text-sm font-medium text-gray-700 mb-2">
                    Organization *
                  </label>
                  <input
                    type="text"
                    id="organization"
                    name="organization"
                    required
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#2EB67D] focus:border-transparent transition-colors"
                  >
                </div>

                <div>
                  <label for="prof-phone" class="block text-sm font-medium text-gray-700 mb-2">
                    Phone *
                  </label>
                  <input
                    type="tel"
                    id="prof-phone"
                    name="prof-phone"
                    required
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#2EB67D] focus:border-transparent transition-colors"
                  >
                </div>
              </div>
            </div>

            <!-- Client Info -->
            <div class="space-y-4">
              <h3 class="font-semibold text-lg">Client Information</h3>
              
              <div>
                <label for="client-name" class="block text-sm font-medium text-gray-700 mb-2">
                  Client Name *
                </label>
                <input
                  type="text"
                  id="client-name"
                  name="client-name"
                  required
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#2EB67D] focus:border-transparent transition-colors"
                >
              </div>

              <div>
                <label for="client-dob" class="block text-sm font-medium text-gray-700 mb-2">
                  Date of Birth
                </label>
                <input
                  type="date"
                  id="client-dob"
                  name="client-dob"
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#2EB67D] focus:border-transparent transition-colors"
                >
              </div>

              <div>
                <label for="placement-date" class="block text-sm font-medium text-gray-700 mb-2">
                  Desired Placement Date
                </label>
                <input
                  type="date"
                  id="placement-date"
                  name="placement-date"
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#2EB67D] focus:border-transparent transition-colors"
                >
              </div>

              <div>
                <label for="referral-notes" class="block text-sm font-medium text-gray-700 mb-2">
                  Additional Notes
                </label>
                <textarea
                  id="referral-notes"
                  name="referral-notes"
                  rows="3"
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#2EB67D] focus:border-transparent transition-colors resize-none"
                  placeholder="Any special considerations or requirements..."
                ></textarea>
              </div>
            </div>

            <!-- Submit Button -->
            <button
              type="submit"
              class="w-full btn btn-primary text-lg font-semibold"
            >
              Submit Referral
              <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </button>
          </form>

          <!-- Success Message -->
          <div id="referral-success" class="hidden mt-6 p-4 bg-green-50 border border-green-200 rounded-lg">
            <p class="text-green-800 font-medium">Referral submitted successfully!</p>
            <p class="text-green-600 text-sm mt-1">Our admissions team will contact you within 1 hour.</p>
          </div>

          <!-- Error Message -->
          <div id="referral-error" class="hidden mt-6 p-4 bg-red-50 border border-red-200 rounded-lg">
            <p class="text-red-800 font-medium">There was an error submitting the referral.</p>
            <p class="text-red-600 text-sm mt-1">Please call us directly at (850) 555-HOPE.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Emergency Contact Section -->
  <section class="section bg-gradient-to-br from-red-600 to-red-700 text-white">
    <div class="container text-center">
      <div class="max-w-3xl mx-auto">
        <h2 class="text-white mb-6">Crisis or Emergency?</h2>
        <p class="text-xl text-white/90 mb-8">
          If you or someone you know is experiencing a medical emergency or mental health crisis, please call 911 immediately or go to your nearest emergency room.
        </p>
        
        <div class="grid sm:grid-cols-2 gap-6 max-w-2xl mx-auto">
          <a href="tel:988" class="card bg-white/10 backdrop-blur-sm border-white/20 hover:bg-white/20 transition-colors">
            <div class="text-lg font-semibold mb-2">988 Suicide & Crisis Lifeline</div>
            <div class="text-white/80">24/7 Crisis Support</div>
          </a>
          <a href="tel:18006624357" class="card bg-white/10 backdrop-blur-sm border-white/20 hover:bg-white/20 transition-colors">
            <div class="text-lg font-semibold mb-2">SAMHSA National Helpline</div>
            <div class="text-white/80">1-800-662-HELP (4357)</div>
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Why Tallahassee Section -->
  <section class="section bg-white">
    <div class="container">
      <div class="text-center mb-16">
        <div class="inline-flex items-center bg-[#2EB67D]/10 text-[#2EB67D] px-6 py-3 rounded-full text-sm font-semibold mb-6">
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
          </svg>
          Our Location
        </div>
        <h2 class="mb-6">Why Tallahassee?</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto leading-relaxed">
          Our strategic location in Florida's capital city provides unique advantages for recovery and rebuilding your life.
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-8 max-w-5xl mx-auto">
        <div class="text-center">
          <div class="w-16 h-16 bg-[#0A2A4A]/10 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-[#0A2A4A]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold mb-2">Employment Opportunities</h3>
          <p class="text-gray-600">State capital with diverse job market and government positions</p>
        </div>

        <div class="text-center">
          <div class="w-16 h-16 bg-[#0A2A4A]/10 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-[#0A2A4A]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold mb-2">Educational Resources</h3>
          <p class="text-gray-600">Multiple colleges and vocational training centers nearby</p>
        </div>

        <div class="text-center">
          <div class="w-16 h-16 bg-[#0A2A4A]/10 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-[#0A2A4A]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold mb-2">Recovery Community</h3>
          <p class="text-gray-600">Strong network of AA/NA meetings and support groups</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Final CTA -->
  <section class="section bg-gradient-to-br from-[#0A2A4A] to-[#163553] text-white">
    <div class="container text-center">
      <div class="max-w-3xl mx-auto">
        <h2 class="text-white mb-6">Ready to Take the Next Step?</h2>
        <p class="text-xl text-white/90 mb-8">
          Don't wait another day. Our admissions team is standing by to help you start your recovery journey.
        </p>
        
        <div class="flex flex-wrap justify-center gap-4">
          <a href="tel:+18505554673" class="btn btn-accent text-lg px-8 py-4 font-semibold shadow-xl">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
            </svg>
            Call (850) 555-HOPE Now
          </a>
          <a href="/apply" class="btn bg-white text-[#0A2A4A] text-lg px-8 py-4 font-semibold hover:bg-gray-100">
            Apply Online
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </a>
        </div>
        
        <p class="mt-8 text-white/70 text-sm">
          We accept most insurance plans. Verification available immediately.
        </p>
      </div>
    </div>
  </section>

  <!-- Form Scripts -->
  <script>
    // General Contact Form Handler
    const contactForm = document.getElementById('contact-form') as HTMLFormElement;
    const formSuccess = document.getElementById('form-success') as HTMLElement;
    const formError = document.getElementById('form-error') as HTMLElement;

    if (contactForm) {
      contactForm.addEventListener('submit', function(e: Event) {
        e.preventDefault();
        
        const form = e.target as HTMLFormElement;
        const formData = new FormData(form);
        
        // Simulate form submission (replace with actual API call)
        console.log('Form submitted:', Object.fromEntries(formData));
        
        // Show success message
        if (formSuccess) {
          formSuccess.classList.remove('hidden');
          formError?.classList.add('hidden');
        }
        
        // Reset form
        form.reset();
        
        // Hide success message after 5 seconds
        setTimeout(() => {
          formSuccess?.classList.add('hidden');
        }, 5000);
      });
    }

    // Professional Referral Form Handler
    const referralForm = document.getElementById('referral-form') as HTMLFormElement;
    const referralSuccess = document.getElementById('referral-success') as HTMLElement;
    const referralError = document.getElementById('referral-error') as HTMLElement;

    if (referralForm) {
      referralForm.addEventListener('submit', function(e: Event) {
        e.preventDefault();
        
        const form = e.target as HTMLFormElement;
