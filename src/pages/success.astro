---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

// Get available facilities for the CTA section
const facilities = await getCollection('facilities');
const availableFacilities = facilities.filter(f => f.data.availability === 'accepting').slice(0, 3);
---

<BaseLayout title="Thank You | NewBridge Living - Your Inquiry Has Been Received">
  <!-- Enhanced Success Hero with Professional Animation -->
  <section class="relative min-h-screen flex items-center justify-center bg-gradient-to-br from-emerald-900 via-emerald-800 to-emerald-700 overflow-hidden">
    <!-- Professional Background Effects -->
    <div class="absolute inset-0">
      <div class="absolute inset-0 bg-gradient-to-br from-emerald-600/20 to-emerald-800/20"></div>
      <div class="absolute inset-0 opacity-5">
        <div class="absolute inset-0" style="background-image: radial-gradient(circle at 1px 1px, rgba(255,255,255,0.15) 1px, transparent 0); background-size: 30px 30px;"></div>
      </div>
      
      <!-- Animated Success Elements -->
      <div class="absolute top-20 left-10 w-24 h-24 bg-emerald-500/20 rounded-full blur-xl animate-float"></div>
      <div class="absolute bottom-20 right-10 w-32 h-32 bg-emerald-600/20 rounded-full blur-xl animate-float-delay"></div>
      <div class="absolute top-1/2 left-1/4 w-16 h-16 bg-emerald-400/20 rounded-full blur-xl animate-float-slow"></div>
    </div>
    
    <div class="relative z-10 max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <!-- Enhanced Success Icon -->
      <div class="mb-12 animate-scale-in">
        <div class="mx-auto w-32 h-32 bg-gradient-to-br from-emerald-400 to-emerald-600 rounded-full flex items-center justify-center shadow-2xl animate-pulse-success">
          <svg class="w-16 h-16 text-white animate-check-draw" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="3">
            <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7"></path>
          </svg>
        </div>
      </div>
      
      <!-- Professional Success Message -->
      <div class="backdrop-blur-xl bg-white/10 rounded-3xl p-8 md:p-16 border border-white/20 shadow-2xl animate-slide-up">
        <h1 class="text-4xl md:text-7xl font-bold text-white mb-8 leading-tight">
          Thank You for Your Inquiry!
        </h1>
        
        <p class="text-xl md:text-2xl text-emerald-100 mb-12 leading-relaxed max-w-4xl mx-auto">
          We've received your message and our <span class="text-white font-bold">admissions team</span> 
          will get back to you <span class="text-white font-bold">within 2 hours</span> to discuss placement options.
        </p>
        
        <!-- Professional Action Buttons -->
        <div class="flex flex-col sm:flex-row gap-6 justify-center items-center mb-16">
          <a 
            href="tel:(850)555-HOPE"
            class="group bg-gradient-to-r from-emerald-600 to-emerald-700 hover:from-emerald-700 hover:to-emerald-800 text-white px-12 py-6 rounded-2xl font-bold text-xl transition-all duration-300 transform hover:scale-105 shadow-2xl flex items-center"
          >
            <svg class="w-6 h-6 mr-3 group-hover:scale-110 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
            </svg>
            Call Now: (850) 555-HOPE
          </a>
          
          <a 
            href="mailto:admissions@newbridgeliving.com"
            class="group bg-white/20 hover:bg-white/30 text-white border-2 border-white/30 hover:border-white/50 px-12 py-6 rounded-2xl font-bold text-xl transition-all duration-300 transform hover:scale-105 backdrop-blur-sm flex items-center"
          >
            <svg class="w-6 h-6 mr-3 group-hover:scale-110 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
            Email Admissions
          </a>
        </div>
        
        <!-- What Happens Next -->
        <div class="bg-white/10 backdrop-blur-sm rounded-2xl p-8 border border-white/20">
          <h3 class="text-2xl font-bold text-white mb-6">What Happens Next?</h3>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-6 text-left">
            <div class="flex items-start">
              <div class="bg-emerald-500 rounded-full w-8 h-8 flex items-center justify-center mr-4 mt-1 flex-shrink-0">
                <span class="text-white font-bold text-sm">1</span>
              </div>
              <div>
                <h4 class="text-white font-bold mb-2">Initial Contact</h4>
                <p class="text-emerald-100 text-sm">Our admissions team will call within 2 hours to discuss your needs and answer questions.</p>
              </div>
            </div>
            <div class="flex items-start">
              <div class="bg-emerald-500 rounded-full w-8 h-8 flex items-center justify-center mr-4 mt-1 flex-shrink-0">
                <span class="text-white font-bold text-sm">2</span>
              </div>
              <div>
                <h4 class="text-white font-bold mb-2">Assessment</h4>
                <p class="text-emerald-100 text-sm">We'll conduct a brief assessment to ensure our program is the right fit for your recovery goals.</p>
              </div>
            </div>
            <div class="flex items-start">
              <div class="bg-emerald-500 rounded-full w-8 h-8 flex items-center justify-center mr-4 mt-1 flex-shrink-0">
                <span class="text-white font-bold text-sm">3</span>
              </div>
              <div>
                <h4 class="text-white font-bold mb-2">Move-In</h4>
                <p class="text-emerald-100 text-sm">If approved, we can often accommodate same-day or next-day move-in for immediate placement.</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact Options Section -->
  <section class="bg-white py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-gray-900 mb-6">Need Immediate Assistance?</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">Our admissions team is standing by to help you or your loved one begin the journey to recovery</p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-10">
        <!-- Direct Phone -->
        <div class="text-center p-10 bg-gradient-to-br from-emerald-50 to-emerald-100 rounded-3xl hover:shadow-lg transition-all duration-300 group border border-emerald-200">
          <div class="bg-gradient-to-br from-emerald-500 to-emerald-600 rounded-3xl w-20 h-20 flex items-center justify-center mx-auto mb-8 group-hover:scale-110 transition-transform duration-300 shadow-lg">
            <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-gray-900 mb-4">Direct Line</h3>
          <p class="text-gray-600 mb-6 text-lg">Speak with admissions directly</p>
          <a href="tel:(850)555-HOPE" class="text-3xl font-bold text-emerald-600 hover:text-emerald-700 transition-colors duration-300 block mb-4">(850) 555-HOPE</a>
          <p class="text-sm text-gray-500">Available 24/7 for Crisis Support</p>
        </div>
        
        <!-- Email Support -->
        <div class="text-center p-10 bg-gradient-to-br from-blue-50 to-blue-100 rounded-3xl hover:shadow-lg transition-all duration-300 group border border-blue-200">
          <div class="bg-gradient-to-br from-blue-500 to-blue-600 rounded-3xl w-20 h-20 flex items-center justify-center mx-auto mb-8 group-hover:scale-110 transition-transform duration-300 shadow-lg">
            <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-gray-900 mb-4">Email Admissions</h3>
          <p class="text-gray-600 mb-6 text-lg">Detailed information requests</p>
          <a href="mailto:admissions@newbridgeliving.com" class="text-xl font-bold text-blue-600 hover:text-blue-700 transition-colors duration-300 block mb-4">admissions@newbridgeliving.com</a>
          <p class="text-sm text-gray-500">Response within 2 hours</p>
        </div>
        
        <!-- Crisis Support -->
        <div class="text-center p-10 bg-gradient-to-br from-purple-50 to-purple-100 rounded-3xl hover:shadow-lg transition-all duration-300 group border border-purple-200">
          <div class="bg-gradient-to-br from-purple-500 to-purple-600 rounded-3xl w-20 h-20 flex items-center justify-center mx-auto mb-8 group-hover:scale-110 transition-transform duration-300 shadow-lg">
            <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-gray-900 mb-4">Crisis Support</h3>
          <p class="text-gray-600 mb-6 text-lg">Immediate assistance needed</p>
          <a href="tel:(850)555-9999" class="text-xl font-bold text-purple-600 hover:text-purple-700 transition-colors duration-300 block mb-4">(850) 555-9999</a>
          <p class="text-sm text-gray-500">24/7 Crisis Hotline</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Explore Our Facilities -->
  {availableFacilities.length > 0 && (
    <section class="bg-gray-50 py-20">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <h2 class="text-4xl font-bold text-gray-900 mb-6">Explore Our Sober Living Homes</h2>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto">While you wait for our call, learn more about our structured sober living environments</p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-10">
          {availableFacilities.map((facility) => (
            <div class="group bg-white rounded-3xl shadow-lg hover:shadow-2xl transition-all duration-500 transform hover:-translate-y-4 border border-gray-100 overflow-hidden">
              <div class="relative h-64 overflow-hidden">
                {facility.data.images && facility.data.images[0] ? (
                  <img 
                    src={facility.data.images[0]} 
                    alt={facility.data.facilityName}
                    class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-700"
                    loading="lazy"
                  />
                ) : (
                  <div class="w-full h-full bg-gradient-to-br from-emerald-100 to-emerald-200 flex items-center justify-center">
                    <svg class="w-16 h-16 text-emerald-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                    </svg>
                  </div>
                )}
                
                <div class="absolute top-6 right-6">
                  <div class="bg-gradient-to-r from-emerald-500 to-emerald-600 text-white px-4 py-2 rounded-full text-sm font-bold shadow-lg">
                    {facility.data.availability === 'accepting' ? 'Beds Available' : 'Contact Us'}
                  </div>
                </div>
              </div>
              
              <div class="p-8">
                <h3 class="text-2xl font-bold text-gray-900 mb-3 group-hover:text-emerald-600 transition-colors duration-300">{facility.data.facilityName}</h3>
                
                <div class="flex items-center text-gray-600 mb-6">
                  <svg class="w-5 h-5 mr-3 text-emerald-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  </svg>
                  <span class="font-semibold text-lg">{facility.data.location}</span>
                </div>
                
                <div class="grid grid-cols-2 gap-4 mb-8">
                  <div class="bg-gradient-to-br from-emerald-50 to-emerald-100 p-4 rounded-2xl border border-emerald-200/50">
                    <div class="text-2xl font-bold text-emerald-600 mb-1">{facility.data.monthlyRent}</div>
                    <div class="text-sm text-emerald-600/80 font-medium">per month</div>
                  </div>
                  <div class="bg-gradient-to-br from-blue-50 to-blue-100 p-4 rounded-2xl border border-blue-200/50">
                    <div class="text-2xl font-bold text-blue-600 mb-1">{facility.data.capacity}</div>
                    <div class="text-sm text-blue-600/80 font-medium">bed capacity</div>
                  </div>
                </div>
                
                <a 
                  href={`/facilities/${facility.data.slug}`}
                  class="block text-center bg-gradient-to-r from-emerald-600 to-emerald-700 hover:from-emerald-700 hover:to-emerald-800 text-white px-8 py-4 rounded-2xl font-bold transition-all duration-300 transform group-hover:scale-105"
                >
                  View Details
                </a>
              </div>
            </div>
          ))}
        </div>

        <div class="text-center mt-16">
          <a 
            href="/facilities" 
            class="inline-flex items-center bg-gradient-to-r from-gray-900 to-gray-800 hover:from-gray-800 hover:to-gray-700 text-white px-12 py-5 rounded-2xl font-bold text-xl transition-all duration-300 transform hover:scale-105 shadow-lg hover:shadow-xl group"
          >
            <span>View All Facilities</span>
            <svg class="w-6 h-6 ml-3 group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
            </svg>
          </a>
        </div>
      </div>
    </section>
  )}

  <style>
    /* Professional success page animations */
    @keyframes float {
      0%, 100% { transform: translateY(0px) rotate(0deg); }
      50% { transform: translateY(-12px) rotate(1deg); }
    }
    
    @keyframes float-delay {
      0%, 100% { transform: translateY(0px) rotate(0deg); }
      50% { transform: translateY(-8px) rotate(-1deg); }
    }
    
    @keyframes float-slow {
      0%, 100% { transform: translateY(0px) rotate(0deg); }
      50% { transform: translateY(-6px) rotate(0.5deg); }
    }
    
    @keyframes scale-in {
      0% { transform: scale(0.8); opacity: 0; }
      100% { transform: scale(1); opacity: 1; }
    }
    
    @keyframes slide-up {
      0% { transform: translateY(30px); opacity: 0; }
      100% { transform: translateY(0); opacity: 1; }
    }
    
    @keyframes pulse-success {
      0%, 100% { transform: scale(1); }
      50% { transform: scale(1.05); }
    }
    
    @keyframes check-draw {
      0% { stroke-dasharray: 0 50; }
      100% { stroke-dasharray: 50 0; }
    }
    
    .animate-float { animation: float 6s ease-in-out infinite; }
    .animate-float-delay { animation: float-delay 8s ease-in-out infinite; }
    .animate-float-slow { animation: float-slow 10s ease-in-out infinite; }
    .animate-scale-in { animation: scale-in 0.6s ease-out; }
    .animate-slide-up { animation: slide-up 0.8s ease-out 0.2s both; }
    .animate-pulse-success { animation: pulse-success 2s ease-in-out infinite; }
    .animate-check-draw { animation: check-draw 0.8s ease-in-out 0.5s both; stroke-dasharray: 0 50; }
  </style>
</BaseLayout>