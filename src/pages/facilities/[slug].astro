---
import BaseLayout from '../../layouts/BaseLayout.astro';
import ImageGallery from '../../components/ImageGallery.astro';
import { getCollection, type CollectionEntry } from 'astro:content';

export async function getStaticPaths() {
  const facilities = await getCollection('facilities');
  return facilities.map((facility: CollectionEntry<'facilities'>) => ({
    params: { slug: facility.data.slug },
    props: { facility },
  }));
}

interface Props {
  facility: CollectionEntry<'facilities'>;
}

const { facility } = Astro.props;
const { facilityName, monthlyRent, capacity, location, address, programs, amenities, images, description, availability, metaTitle, metaDescription } = facility.data;

// Get related facilities
const allFacilities = await getCollection('facilities');
const relatedFacilities = allFacilities
  .filter(f => f.data.slug !== facility.data.slug && f.data.availability === 'accepting')
  .slice(0, 3);
---

<BaseLayout 
  title={metaTitle || `${facilityName} - Sober Living | NewBridge Living`}
  description={metaDescription || `${capacity}-bed sober living home in ${location}. Structured environment with proven recovery programs. ${description.substring(0, 150)}...`}
>
  <!-- Hero Section with Breadcrumb -->
  <section class="relative bg-gradient-to-br from-emerald-900 via-teal-900 to-emerald-800 pt-24 pb-12 overflow-hidden">
    <!-- Background Pattern -->
    <div class="absolute inset-0 opacity-5">
      <div class="absolute inset-0" style="background-image: radial-gradient(circle at 2px 2px, rgba(255,255,255,0.15) 1px, transparent 0); background-size: 40px 40px;"></div>
    </div>
    
    <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Breadcrumb -->
      <nav class="mb-8" aria-label="Breadcrumb">
        <ol class="flex items-center space-x-2 text-sm">
          <li><a href="/" class="text-emerald-200 hover:text-white transition-colors duration-300">Home</a></li>
          <li><span class="text-emerald-300">•</span></li>
          <li><a href="/facilities" class="text-emerald-200 hover:text-white transition-colors duration-300">Facilities</a></li>
          <li><span class="text-emerald-300">•</span></li>
          <li class="text-white font-semibold">{facilityName}</li>
        </ol>
      </nav>

      <!-- Hero Content -->
      <div class="max-w-4xl">
        <!-- Status Badge -->
        <div class="inline-flex items-center mb-6">
          <div class={`px-4 py-2 rounded-full text-sm font-semibold shadow-lg backdrop-blur-sm border ${
            availability === 'accepting' ? 'bg-green-500/20 text-green-300 border-green-500/30' :
            availability === 'waitlist' ? 'bg-yellow-500/20 text-yellow-300 border-yellow-500/30' :
            'bg-red-500/20 text-red-300 border-red-500/30'
          }`}>
            {availability === 'accepting' ? '✅ Currently Accepting Residents' :
             availability === 'waitlist' ? '⏳ Waitlist Available' :
             '❌ Currently Full'}
          </div>
        </div>
        
        <h1 class="text-4xl md:text-6xl font-bold text-white mb-6 leading-tight">{facilityName}</h1>
        <div class="flex flex-wrap items-center gap-6 text-emerald-100 mb-8">
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"></path>
            </svg>
            <span class="text-lg">{location}</span>
          </div>
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
              <path d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v3h8v-3z"></path>
            </svg>
            <span class="text-lg">{capacity} Bed Capacity</span>
          </div>
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
              <path d="M8.433 7.418c.155-.103.346-.196.567-.267v1.698a2.305 2.305 0 01-.567-.267C8.07 8.34 8 8.114 8 8c0-.114.07-.34.433-.582zM11 12.849v-1.698c.22.071.412.164.567.267.364.243.433.468.433.582 0 .114-.07.34-.433.582a2.305 2.305 0 01-.567.267z"></path>
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-13a1 1 0 10-2 0v.092a4.535 4.535 0 00-1.676.662C6.602 6.234 6 7.009 6 8c0 .99.602 1.765 1.324 2.246.48.32 1.054.545 1.676.662v1.941c-.391-.127-.68-.317-.843-.504a1 1 0 10-1.51 1.31c.562.649 1.413 1.076 2.353 1.253V15a1 1 0 102 0v-1.092a4.535 4.535 0 001.676-.662C13.398 12.766 14 11.991 14 11c0-.99-.602-1.765-1.324-2.246A4.535 4.535 0 0011 8.092V6.151c.391.127.68.317.843.504a1 1 0 101.511-1.31c-.563-.649-1.413-1.076-2.354-1.253V4z" clip-rule="evenodd"></path>
            </svg>
            <span class="text-lg font-bold">{monthlyRent}</span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Main Content -->
  <section class="py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
        <!-- Main Content -->
        <div class="lg:col-span-2">
          <!-- Image Gallery -->
          {images.length > 0 && (
            <ImageGallery 
              images={images} 
              title={facilityName}
              availability={availability}
            />
          )}
          
          <!-- Description -->
          <div class="prose prose-lg max-w-none mb-12">
            <h2 class="text-3xl font-bold text-gray-900 mb-6">About This Facility</h2>
            <p class="text-gray-600 leading-relaxed">{description}</p>
            <p class="text-gray-600 leading-relaxed mt-4">
              Located at {address}, our facility provides a safe, structured environment for men in recovery.
              Our evidence-based approach combines peer support, professional counseling, and life skills training
              to help residents build a strong foundation for long-term sobriety.
            </p>
          </div>

          <!-- Programs & Services -->
          <div class="mb-12">
            <h3 class="text-2xl font-bold text-gray-900 mb-6">Programs & Services</h3>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              {programs.map((program) => (
                <div class="bg-emerald-50 rounded-xl p-6 border border-emerald-200/50">
                  <div class="flex items-center mb-3">
                    <svg class="w-6 h-6 text-emerald-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    <h4 class="text-lg font-semibold text-emerald-900">{program}</h4>
                  </div>
                  <p class="text-emerald-700 text-sm">Comprehensive support and guidance for your recovery journey.</p>
                </div>
              ))}
            </div>
          </div>

          <!-- Amenities -->
          <div>
            <h3 class="text-2xl font-bold text-gray-900 mb-6">Amenities & Features</h3>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
              {amenities.map((amenity) => (
                <div class="flex items-center bg-white p-4 rounded-lg border border-gray-200">
                  <svg class="w-5 h-5 text-emerald-500 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                  <span class="text-gray-700 font-medium">{amenity}</span>
                </div>
              ))}
            </div>
          </div>
        </div>

        <!-- Sidebar -->
        <div class="lg:col-span-1">
          <!-- Quick Info Card -->
          <div class="bg-white rounded-2xl shadow-lg border border-gray-200 p-8 mb-8 sticky top-8">
            <div class="text-center mb-6">
              <div class="text-3xl font-bold text-emerald-600 mb-2">{monthlyRent}</div>
              <div class="text-gray-600">per month</div>
            </div>
            
            <div class="space-y-4 mb-8">
              <div class="flex items-center justify-between">
                <span class="text-gray-600">Capacity</span>
                <span class="font-semibold text-gray-900">{capacity} beds</span>
              </div>
              <div class="flex items-center justify-between">
                <span class="text-gray-600">Location</span>
                <span class="font-semibold text-gray-900">{location}</span>
              </div>
              <div class="flex items-center justify-between">
                <span class="text-gray-600">Availability</span>
                <span class={`px-2 py-1 rounded-full text-xs font-medium ${
                  availability === 'accepting' ? 'bg-green-100 text-green-800' :
                  availability === 'waitlist' ? 'bg-yellow-100 text-yellow-800' :
                  'bg-red-100 text-red-800'
                }`}>
                  {availability === 'accepting' ? 'Available' :
                   availability === 'waitlist' ? 'Waitlist' : 'Full'}
                </span>
              </div>
            </div>

            <!-- Contact Form -->
            {availability !== 'full' && (
              <form 
                name="facility-inquiry" 
                method="POST" 
                data-netlify="true"
                data-netlify-honeypot="bot-field"
                action="/success"
                class="space-y-6"
              >
                <input type="hidden" name="form-name" value="facility-inquiry" />
                <input type="hidden" name="facilityInterested" value={facilityName} />
                <input type="hidden" name="source" value="facility-page" />
                <input type="hidden" name="status" value="new" />
                <input type="hidden" name="priority" value="high" />
                <div class="hidden">
                  <label>Don't fill this out: <input name="bot-field" /></label>
                </div>

                <div>
                  <label for="name" class="block text-sm font-semibold text-gray-700 mb-2">Full Name *</label>
                  <input 
                    type="text" 
                    id="name" 
                    name="name" 
                    required
                    class="w-full px-4 py-3 border-2 border-gray-200 rounded-2xl focus:ring-4 focus:ring-emerald-500/20 focus:border-emerald-500 transition-all duration-300"
                  />
                </div>

                <div>
                  <label for="phone" class="block text-sm font-semibold text-gray-700 mb-2">Phone Number *</label>
                  <input 
                    type="tel" 
                    id="phone" 
                    name="phone" 
                    required
                    class="w-full px-4 py-3 border-2 border-gray-200 rounded-2xl focus:ring-4 focus:ring-emerald-500/20 focus:border-emerald-500 transition-all duration-300"
                  />
                </div>

                <div>
                  <label for="email" class="block text-sm font-semibold text-gray-700 mb-2">Email Address *</label>
                  <input 
                    type="email" 
                    id="email" 
                    name="email" 
                    required
                    class="w-full px-4 py-3 border-2 border-gray-200 rounded-2xl focus:ring-4 focus:ring-emerald-500/20 focus:border-emerald-500 transition-all duration-300"
                  />
                </div>

                <div>
                  <label for="message" class="block text-sm font-semibold text-gray-700 mb-2">Message</label>
                  <textarea 
                    id="message" 
                    name="message" 
                    rows="4"
                    class="w-full px-4 py-3 border-2 border-gray-200 rounded-2xl focus:ring-4 focus:ring-emerald-500/20 focus:border-emerald-500 transition-all duration-300"
                    placeholder="Tell us about your needs or ask any questions..."
                  ></textarea>
                </div>

                <button 
                  type="submit"
                  class="w-full bg-gradient-to-r from-emerald-600 to-emerald-700 hover:from-emerald-700 hover:to-emerald-800 text-white font-bold py-4 px-6 rounded-2xl transition-all duration-300 transform hover:scale-105 shadow-lg hover:shadow-xl"
                >
                  {availability === 'accepting' ? 'Request Information' : 'Join Waitlist'}
                </button>
              </form>
            )}

            {availability === 'full' && (
              <div class="text-center">
                <div class="bg-red-50 border border-red-200 rounded-2xl p-6 mb-4">
                  <svg class="w-12 h-12 text-red-500 mx-auto mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                  <h4 class="text-red-800 font-bold text-lg mb-2">Currently Full</h4>
                  <p class="text-red-600 text-sm">This facility is at capacity. Please check our other locations or contact us about future availability.</p>
                </div>
                <a 
                  href="/facilities" 
                  class="block w-full bg-gray-600 hover:bg-gray-700 text-white font-bold py-4 px-6 rounded-2xl transition-all duration-300"
                >
                  View Other Facilities
                </a>
              </div>
            )}
          </div>

          <!-- Emergency Contact -->
          <div class="bg-emerald-900 text-white rounded-2xl p-6">
            <h4 class="text-lg font-bold mb-4">Need Immediate Help?</h4>
            <p class="text-emerald-200 text-sm mb-4">
              Our crisis support team is available 24/7 to provide immediate assistance and guidance.
            </p>
            <a 
              href="tel:+18505555HOPE" 
              class="block w-full bg-emerald-600 hover:bg-emerald-700 text-white font-bold py-3 px-4 rounded-xl text-center transition-all duration-300"
            >
              📞 Call (850) 555-HOPE
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Related Facilities -->
  {relatedFacilities.length > 0 && (
    <section class="bg-gray-50 py-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">Other Available Facilities</h2>
          <p class="text-xl text-gray-600">Explore our other sober living homes with current availability</p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {relatedFacilities.map((facility) => (
            <div class="bg-white rounded-2xl overflow-hidden shadow-lg hover:shadow-xl transition-all duration-300 border border-gray-200">
              <div class="relative h-48 overflow-hidden">
                <img 
                  src={facility.data.images[0] || '/images/facilities/placeholder.jpg'} 
                  alt={facility.data.facilityName}
                  class="w-full h-full object-cover hover:scale-110 transition-transform duration-500"
                />
                <div class="absolute top-4 right-4">
                  <div class="bg-green-500 text-white px-3 py-1 rounded-full text-sm font-semibold">
                    Available
                  </div>
                </div>
              </div>
              
              <div class="p-6">
                <h3 class="text-xl font-bold text-gray-900 mb-2">{facility.data.facilityName}</h3>
                <p class="text-gray-600 mb-4">{facility.data.location}</p>
                
                <div class="flex items-center justify-between mb-4">
                  <span class="text-2xl font-bold text-emerald-600">{facility.data.monthlyRent}</span>
                  <span class="text-gray-500">{facility.data.capacity} beds</span>
                </div>
                
                <a 
                  href={`/facilities/${facility.data.slug}`}
                  class="block w-full bg-emerald-600 hover:bg-emerald-700 text-white font-semibold py-3 px-4 rounded-xl text-center transition-all duration-300"
                >
                  View Details
                </a>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>
  )}
</BaseLayout>