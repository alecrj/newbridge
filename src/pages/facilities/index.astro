---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const facilities = await getCollection('facilities');
const availableFacilities = facilities.filter(f => f.data.availability === 'accepting');
const featuredFacilities = facilities.filter(f => f.data.featured);
---

<BaseLayout 
  title="Sober Living Facilities | NewBridge Living - Tallahassee"
  description="Quality sober living homes in Tallahassee, FL. Structured environment, 24/7 support, and proven recovery programs. Call (850) 555-HOPE today."
>
  <!-- Hero Section -->
  <section class="relative bg-gradient-to-br from-emerald-900 via-teal-900 to-emerald-800 pt-24 pb-16 overflow-hidden">
    <!-- Background Pattern -->
    <div class="absolute inset-0 opacity-5">
      <div class="absolute inset-0" style="background-image: radial-gradient(circle at 2px 2px, rgba(255,255,255,0.15) 1px, transparent 0); background-size: 40px 40px;"></div>
    </div>
    
    <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center max-w-4xl mx-auto">
        <div class="inline-flex items-center bg-emerald-500/20 text-emerald-300 px-6 py-2 rounded-full text-sm font-semibold mb-6 backdrop-blur-sm border border-emerald-500/30">
          <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
            <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          Quality Sober Living in Tallahassee
        </div>
        
        <h1 class="text-4xl md:text-6xl font-bold text-white mb-6 leading-tight">
          Our Sober Living
          <span class="text-transparent bg-clip-text bg-gradient-to-r from-emerald-300 to-teal-300"> Facilities</span>
        </h1>
        
        <p class="text-xl text-emerald-100 mb-8 leading-relaxed">
          Safe, structured environments designed to support your recovery journey. 
          Professional staff, proven programs, and a community that cares.
        </p>
        
        <div class="flex flex-wrap justify-center gap-4">
          <a href="#facilities" class="bg-gradient-to-r from-emerald-600 to-teal-600 text-white px-8 py-4 rounded-2xl font-bold text-lg hover:from-emerald-700 hover:to-teal-700 transform hover:scale-105 transition-all duration-300 shadow-lg">
            View Our Homes
          </a>
          <a href="tel:(850)555-HOPE" class="bg-white/10 backdrop-blur-sm text-white px-8 py-4 rounded-2xl font-bold text-lg hover:bg-white/20 border border-white/20 transition-all duration-300">
            Call Now: (850) 555-HOPE
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Statistics Section -->
  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 md:grid-cols-4 gap-8 text-center">
        <div class="group">
          <div class="bg-emerald-100 rounded-3xl p-8 group-hover:scale-105 transition-transform duration-300">
            <div class="text-4xl font-bold text-emerald-600 mb-2">Large</div>
            <div class="text-gray-600 font-semibold">Rooms</div>
          </div>
        </div>
        <div class="group">
          <div class="bg-teal-100 rounded-3xl p-8 group-hover:scale-105 transition-transform duration-300">
            <div class="text-4xl font-bold text-teal-600 mb-2">Central</div>
            <div class="text-gray-600 font-semibold">Location</div>
          </div>
        </div>
        <div class="group">
          <div class="bg-blue-100 rounded-3xl p-8 group-hover:scale-105 transition-transform duration-300">
            <div class="text-4xl font-bold text-blue-600 mb-2">24/7</div>
            <div class="text-gray-600 font-semibold">Support Staff</div>
          </div>
        </div>
        <div class="group">
          <div class="bg-purple-100 rounded-3xl p-8 group-hover:scale-105 transition-transform duration-300">
            <div class="text-4xl font-bold text-purple-600 mb-2">Stat</div>
            <div class="text-gray-600 font-semibold">Goes Here</div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Facilities Grid -->
  <section id="facilities" class="py-20 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-gray-900 mb-4">Our Facilities</h2>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto">
          Each home is carefully designed to provide a safe, supportive environment for your recovery journey.
        </p>
      </div>

      {facilities.length > 0 ? (
        <div class="grid grid-cols-1 lg:grid-cols-2 xl:grid-cols-3 gap-8">
          {facilities.map((facility) => {
            const { facilityName, slug, monthlyRent, capacity, location, address, programs, amenities, images, description, availability } = facility.data;
            
            return (
              <div class="bg-white rounded-3xl overflow-hidden shadow-lg hover:shadow-2xl transition-all duration-300 group border border-gray-100">
                <!-- Image -->
                <div class="relative h-64 overflow-hidden">
                  <img 
                    src={images[0] || '/images/facilities/placeholder.jpg'} 
                    alt={facilityName}
                    class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
                  />
                  
                  <!-- Status Badge -->
                  <div class="absolute top-4 right-4">
                    <div class={`px-3 py-1 rounded-full text-sm font-semibold backdrop-blur-sm border ${
                      availability === 'accepting' ? 'bg-green-500/90 text-white border-green-500' :
                      availability === 'waitlist' ? 'bg-yellow-500/90 text-white border-yellow-500' :
                      'bg-red-500/90 text-white border-red-500'
                    }`}>
                      {availability === 'accepting' ? '✅ Available' :
                       availability === 'waitlist' ? '⏳ Waitlist' :
                       '❌ Full'}
                    </div>
                  </div>

                  {facility.data.featured && (
                    <div class="absolute top-4 left-4">
                      <div class="bg-emerald-500/90 text-white px-3 py-1 rounded-full text-sm font-semibold backdrop-blur-sm border border-emerald-500">
                        ⭐ Featured
                      </div>
                    </div>
                  )}
                </div>

                <!-- Content -->
                <div class="p-8">
                  <div class="flex items-start justify-between mb-4">
                    <h3 class="text-2xl font-bold text-gray-900 group-hover:text-emerald-600 transition-colors duration-300">
                      {facilityName}
                    </h3>
                    <div class="text-right">
                      <div class="text-2xl font-bold text-emerald-600">{monthlyRent}</div>
                      <div class="text-sm text-gray-500">per month</div>
                    </div>
                  </div>

                  <div class="flex items-center text-gray-600 mb-4">
                    <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"></path>
                    </svg>
                    <span class="text-sm">{location}</span>
                    <span class="mx-2">•</span>
                    <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v3h8v-3z"></path>
                    </svg>
                    <span class="text-sm">{capacity} beds</span>
                  </div>

                  <p class="text-gray-600 mb-6 line-clamp-3">{description}</p>

                  <!-- Key Features -->
                  <div class="space-y-3 mb-6">
                    <div class="flex items-center">
                      <svg class="w-4 h-4 text-emerald-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                      </svg>
                      <span class="text-sm text-gray-600">{programs[0] || 'Structured Program'}</span>
                    </div>
                    <div class="flex items-center">
                      <svg class="w-4 h-4 text-emerald-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                      </svg>
                      <span class="text-sm text-gray-600">{amenities[0] || '24/7 Support Staff'}</span>
                    </div>
                    <div class="flex items-center">
                      <svg class="w-4 h-4 text-emerald-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                      </svg>
                      <span class="text-sm text-gray-600">{amenities[1] || 'Group Support'}</span>
                    </div>
                  </div>

                  <!-- Action Button -->
                  <a 
                    href={`/facilities/${slug}`}
                    class="block w-full text-center bg-gradient-to-r from-emerald-600 to-teal-600 text-white px-6 py-3 rounded-2xl font-semibold hover:from-emerald-700 hover:to-teal-700 transform hover:scale-[1.02] transition-all duration-300 shadow-md"
                  >
                    View Details
                  </a>
                </div>
              </div>
            );
          })}
        </div>
      ) : (
        <div class="text-center py-16">
          <div class="bg-gray-100 rounded-3xl p-12 max-w-2xl mx-auto">
            <svg class="w-16 h-16 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
            </svg>
            <h3 class="text-xl font-bold text-gray-900 mb-2">No Facilities Added Yet</h3>
            <p class="text-gray-600 mb-6">Add your first sober living facility through the admin panel.</p>
            <a href="/admin" class="inline-flex items-center bg-emerald-600 text-white px-6 py-3 rounded-2xl font-semibold hover:bg-emerald-700 transition-colors duration-300">
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
              </svg>
              Add Facility
            </a>
          </div>
        </div>
      )}
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 bg-gradient-to-r from-emerald-600 to-teal-600">
    <div class="max-w-4xl mx-auto text-center px-4 sm:px-6 lg:px-8">
      <h2 class="text-4xl font-bold text-white mb-6">Ready to Start Your Recovery Journey?</h2>
      <p class="text-xl text-emerald-100 mb-8">
        Take the first step towards lasting sobriety. Our compassionate team is here to help you every step of the way.
      </p>
      <div class="flex flex-wrap justify-center gap-4">
        <a href="tel:(850)555-HOPE" class="bg-white text-emerald-600 px-8 py-4 rounded-2xl font-bold text-lg hover:bg-emerald-50 transform hover:scale-105 transition-all duration-300 shadow-lg">
          Call (850) 555-HOPE
        </a>
        <a href="/#contact" class="bg-emerald-500 text-white px-8 py-4 rounded-2xl font-bold text-lg hover:bg-emerald-400 transform hover:scale-105 transition-all duration-300 border-2 border-white/20">
          Request Information
        </a>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>