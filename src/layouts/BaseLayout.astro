          <span class="hidden sm:inline">8 Beds Available in Tallahassee</span>
        </div>
        <div class="flex items-center gap-4">
          <a href="tel:+18505554673" class="hover:text-accent transition-colors">
            <span class="hidden sm:inline">24/7 Support:</span> (850) 555-HOPE
          </a>
        </div>
      </div>
    </div>
    
    <!-- Main Navigation -->
    <nav class="container py-4" aria-label="Main navigation">
      <div class="flex justify-between items-center">
        <!-- Logo -->
        <a href="/" class="flex items-center gap-2 group">
          <div class="w-10 h-10 bg-gradient-to-br from-primary to-primary-dark rounded-lg flex items-center justify-center">
            <span class="text-white font-bold text-xl">NB</span>
          </div>
          <div>
            <div class="text-lg font-semibold text-primary group-hover:text-accent transition-colors">
              NewBridge Living
            </div>
            <div class="text-xs text-muted">Sober Living â€¢ Tallahassee</div>
          </div>
        </a>
        
        <!-- Desktop Nav -->
        <div class="hidden lg:flex items-center gap-8">
          <a href="/about" class="text-gray-700 hover:text-primary font-medium transition-colors">About</a>
          <a href="/facilities" class="text-gray-700 hover:text-primary font-medium transition-colors">Our Homes</a>
          <a href="/programs" class="text-gray-700 hover:text-primary font-medium transition-colors">Programs</a>
